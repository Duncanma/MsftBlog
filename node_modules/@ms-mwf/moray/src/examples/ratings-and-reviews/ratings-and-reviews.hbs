<section>
  <div class="row">
    {{!-- Component heading --}}
    <div class="col-12">
      {{render '@headings' page-heading~}}
    </div>
  </div>
  <div class="row">
    {{!-- Left column --}}
    <div class="col-12 col-md-4">
      {{!-- Rate and review --}}
      <section class="mb-5">
        {{render '@headings' rate-and-review.heading~}}
        {{render '@paragraphs' rate-and-review.subhead}}
        {{#if user}}
          {{#unless user.review}}
            {{render '@button' rate-and-review.modal-toggle~}}
            {{render '@rate-a-product'}}
          {{/unless}}
        {{else}}
          {{render '@button' rate-and-review.sign-in merge=true~}}
        {{/if}}
      </section>
      {{#if reviews.reviews}}
      {{!-- Cumulative score --}}
      <section class="mb-5">
        {{render '@ratings-bar--cumulative-score'}}
      </section>
      {{!-- Filters --}}
      <section>
        {{render '@headings' filter.heading}}
        {{render '@dropdown' filter.dropdown merge=true}}
        {{#if applied-filters}}
        <div class="mb-3">
          {{render '@filters--applied-filters' applied-filters}}
        </div>
        {{/if}}
      </section>
      {{/if}}
    </div>
    {{!-- Right column --}}
    {{!-- Review list --}}
    {{#if reviews.reviews}}
    <section class="col-12 col-md-8">
      {{#if user.review}}
        {{render '@headings' your-review}}
        {{render '@review--editable' user.review merge=true}}
      {{/if}}
      <div class="d-sm-flex align-items-center justify-content-between">
        {{render '@headings' reviews.heading}}
        <div class="form-inline">
          {{render '@select' reviews.sort}}
        </div>
      </div>
      <ul class="list-unstyled">
        {{#each reviews.reviews}}
          {{#if @last}}
            {{setProp this "last" true}}
          {{/if}}
          {{#if ../user}}
            {{render '@review' this merge=true}}
          {{else}}
            {{render '@review--unauthenticated' this merge=true}}
          {{/if}}
        {{/each}}
      </ul>
      <div class="d-md-flex align-items-center justify-content-between">
        <p class="mb-0">Showing 1-5 of 65 reviews</p>
        {{render '@pagination--greater-than-7-segment-start' reviews.pagination merge=true}}
      </div>
    </section>
    {{/if}}
  </div>
</section>

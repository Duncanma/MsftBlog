{
	"title": "Carousels in Sticky Tabs",
  "status": "prototype",
	"context": {
		"hide-highlight": "true",
	  "horizontal-tabs": {
	    "sticky" : {
	      "classes": "bg-body stuck-depth",
	      "direction": "top"
	    },
	    "tab-pattern":{
	      "tab-list" : {
		      "alignment": "justify-content-center",
		      "aria-label": "explicit aria label describing tab list"
	      },
	      "tab-group": [
          {
            "active": true,
            "tab-element": {
              "id": "tab1",
              "text": "Overview",
              "glyph-classes": "glyph-prepend glyph-prepend-xbox-one-console"
            },
            "tab-panel": {
              "tab-id": "tab1",
              "content": {
                "handle": [
                  "carousel-product-card--many-items-one-slide"
                ]
              }
            }
          },
          {
            "tab-element": {
              "id": "tab2",
              "text": "Tech specs",
              "glyph-classes": "glyph-prepend glyph-prepend-photo-collection"
            },
            "tab-panel": {
              "tab-id": "tab2",
              "content": {
                "handle": [
                  "carousel-product-card--many-items-one-slide"
                ]
              }
            }
          }
	      ],
	      "button": {
          "link": true,
          "text": "Back to tabs",
          "classes": "sr-only-focusable position-absolute bottom-0",
          "attributes": {
            "data-focus": "back-to-tabs"
          }
	      }
	    }
	  }
	}
}
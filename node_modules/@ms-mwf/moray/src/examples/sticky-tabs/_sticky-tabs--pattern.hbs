<div data-mount="sticky" data-direction="{{horizontal-tabs.sticky.direction}}" data-smooth-transition
  class="{{horizontal-tabs.sticky.classes}}">
  {{#if horizontal-tabs.show-stuck}}
  <div class="sticky-show-stuck my-3">
    <div class="container">
      <div class="row">
        <div class="col-6 d-none d-sm-block">
          {{render '@headings' horizontal-tabs.show-stuck.heading}}
        </div>
        <div class="col-12 col-sm-6 text-left text-sm-right font-weight-semibold">
          {{render '@paragraphs' horizontal-tabs.show-stuck.paragraph}}
          {{#if horizontal-tabs.show-stuck.cta}}
          {{render '@call-to-action' horizontal-tabs.show-stuck.cta}}
          {{/if}}
          {{#if horizontal-tabs.show-stuck.button}}
          {{render '@button--default' horizontal-tabs.show-stuck.button merge=true}}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/if}}
  <div class="container">
    {{ render '@tab--list' horizontal-tabs.tab-pattern }}
  </div>
</div>

<div class="container mt-4">
  {{ render '@tab--panel-list' horizontal-tabs.tab-pattern }}
</div>
{
  "title": "Sticky tabs",
  "status": "ready",
  "default": "cta",
  "preview": "@preview",
  "order": 4,
  "context": {
    "horizontal-tabs": {
      "sticky" : {
        "classes": "bg-body stuck-depth",
        "direction": "top"
      },
      "show-stuck": {
        "heading": {
          "html-tag": "h3",
          "classes": "h3 my-0",
          "text": "Surface Headphones 2",
          "attributes": {
            "aria-hidden": "true"
          }
        },
        "paragraph": {
          "classes": "d-inline-block my-0 mr-2",
          "content": "Starting from $249.99",
          "attributes": {
            "aria-hidden":"true"
          }
        },
        "cta": {
          "href": "#",
          "text": "Configure now",
          "aria-label": "Configure now, Surface Headphones 2, Starting from $249.99"
        }
      },
      "tab-pattern":{
        "appearance": "horizontal",
        "tab-list" : {
          "alignment": "justify-content-center",
          "aria-label": "explicit aria label describing tab list"
        },
        "tab-group": [
          {
            "active": true,
            "tab-element": {
              "id": "tab1",
              "text": "Overview",
              "glyph-classes": "glyph-prepend glyph-prepend-xbox-one-console"
            },
            "tab-panel": {
              "tab-id": "tab1",
              "heading": {
                "text": "Explore the overview and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "handle": [
                  "content-cards-vertical--3-up-no-depth",
                  "feature--mini-features",
                  "banner--rounded-image",
                  "story-feature--3-images-3-text-areas"
                ]
              }
            }
          },
          {
            "tab-element": {
              "id": "tab2",
              "text": "Tech specs",
              "glyph-classes": "glyph-prepend glyph-prepend-photo-collection"
            },
            "tab-panel": {
              "tab-id": "tab2",
              "heading": {
                "text": "Explore the tech specs and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "handle": [
                  "table--presentational",
                  "feature--mini-features"
                ]
              }
            }
          },
          {
            "tab-element": {
              "id": "tab3",
              "text": "What's included",
              "glyph-classes": "glyph-prepend glyph-prepend-info"
            },
            "tab-panel": {
              "tab-id": "tab3",
              "heading": {
                "text": "Explore what's included and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "handle": ["content-list--3-column-inline-image", "feature--mini-features"]
              }
            }
          },
          {
            "tab-element": {
              "id": "tab4",
              "text": "Review",
              "glyph-classes": "glyph-prepend glyph-prepend-favorite-star"
            },
            "tab-panel": {
              "tab-id": "tab4",
              "heading": {
                "text": "Explore reviews and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "handle": ["review--customer-care", "feature--mini-features"]
              }
            }
          },
          {
            "tab-element": {
              "id": "tab5",
              "text": "Deals",
              "glyph-classes": "glyph-prepend glyph-prepend-shopping-cart"
            },
            "tab-panel": {
              "tab-id": "tab5",
              "heading": {
                "text": "Explore deals and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "handle": ["product-cards--devices", "feature--mini-features"]
              }
            }
          }
        ],
        "button": {
          "link": true,
          "text": "Back to tabs",
          "classes": "sr-only-focusable position-absolute bottom-0",
          "attributes": {
            "data-focus": "back-to-tabs"
          }
        },
        "horizontal-rule": {
          "classes": "border-width-2 mt-5"
        }
      }
    }
  },
  "variants": [
    {
      "name": "cta",

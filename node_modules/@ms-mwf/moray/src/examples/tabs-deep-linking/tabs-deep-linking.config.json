{
  "title": "Tabs deep linking",
  "status": "ready",
  "preview": "@preview",
  "context": {
    "highlight": {
      "card": {
        "small": false,
        "body": {
          "templates": [
            {
              "name": "common-card-body",
              "data": {
                "heading": {
                  "html-tag": "h2",
                  "text": "This is an optional headline"
                },
                "body": [
                  {
                    "paragraph": {
                      "content": "Paragraph text is also optional. Keep the body paragraph short and concise"
                    }
                  }
                ],
                "link-group": {
                  "links": [
                    {
                      "button": {
                        "text": "Screen specs",
                        "link": {
                          "href": "#tech-specs-screen"
                        },
                        "id": "screen-specs-btn"
                      }
                    },
                    {
                      "cta": {
                        "text": "Reviews",
                        "href": "#tab4",
                        "attributes": {
                          "id": "review-cta"
                        }
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    },
    "horizontal-tabs": {
      "sticky": {
        "classes": "bg-body stuck-depth",
        "direction": "top"
      },
      "show-stuck": {
        "heading": {
          "html-tag": "h3",
          "classes": "h3 my-0",
          "text": "Surface Headphones 2",
          "attributes": {
            "aria-hidden": "true"
          }
        },
        "paragraph": {
          "classes": "d-inline-block my-0 mr-2",
          "content": "Starting from $249.99",
          "attributes": {
            "aria-hidden": "true"
          }
        },
        "cta": {
          "href": "#",
          "text": "Configure now",
          "aria-label": "Configure now, Surface Headphones 2, Starting from $249.99"
        }
      },
      "tab-pattern": {
        "appearance": "horizontal",
        "tab-list": {
          "alignment": "justify-content-center",
          "aria-label": "explicit aria label describing tab list"
        },
        "tab-group": [
          {
            "active": true,
            "tab-element": {
              "id": "tab1",
              "text": "Overview",
              "glyph-classes": "glyph-prepend glyph-prepend-xbox-one-console"
            },
            "tab-panel": {
              "tab-id": "tab1",
              "heading": {
                "text": "Explore the overview and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "handle": [
                  "content-cards-vertical--3-up-no-depth",
                  "feature--mini-features",
                  "banner--rounded-image",
                  "story-feature--3-images-3-text-areas"
                ]
              }
            }
          },
          {
            "tab-element": {
              "id": "tab2",
              "text": "Tech specs",
              "glyph-classes": "glyph-prepend glyph-prepend-photo-collection"
            },
            "tab-panel": {
              "tab-id": "tab2",
              "heading": {
                "text": "Explore the tech specs and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "templates": [
                  {
                    "name": "table--presentational",
                    "data": {
                      "table": {
                        "body": {
                          "rows": [
                            {
                              "header": "<h3 class=\"h5\">Processor</h3>",
                              "data": [
                                "<div>Intel® Pentium® Gold Processor 4415Y</div>"
                              ]
                            },
                            {
                              "header": "<h3 class=\"h5\">Graphics</h3>",
                              "data": [
                                "<div>Intel® HD Graphics 615</div>"
                              ]
                            },
                            {
                              "header": "<h3 class=\"h5\" id=\"tech-specs-screen\" tabindex=\"0\">Screen</h3>",
                              "data": [
                                "<div>10” PixelSense™ Display</div>"
                              ]
                            }
                          ]
                        }
                      }
                    }
                  },
                  {
                    "name": "feature--mini-features"
                  }
                ]
              }
            }
          },
          {
            "tab-element": {
              "id": "tab3",
              "text": "What's included",
              "glyph-classes": "glyph-prepend glyph-prepend-info"
            },
            "tab-panel": {
              "tab-id": "tab3",
              "heading": {
                "text": "Explore what's included and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "handle": [
                  "content-list--3-column-inline-image",
                  "feature--mini-features"
                ]
              }
            }
          },
          {
            "tab-element": {
              "id": "tab4",
              "text": "Review",
              "glyph-classes": "glyph-prepend glyph-prepend-favorite-star"
            },
            "tab-panel": {
              "tab-id": "tab4",
              "heading": {
                "text": "Explore reviews and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "handle": [
                  "review--customer-care",
                  "feature--mini-features"
                ]
              }
            }
          },
          {
            "tab-element": {
              "id": "tab5",
              "text": "Deals",
              "glyph-classes": "glyph-prepend glyph-prepend-shopping-cart"
            },
            "tab-panel": {
              "tab-id": "tab5",
              "heading": {
                "text": "Explore deals and learn what's new",
                "alignment": "text-center"
              },
              "content": {
                "static": false,
                "handle": [
                  "product-cards--devices",
                  "feature--mini-features"
                ]
              }
            }
          }
        ]
      }
    }
  },
  "variants": [
    {
      "name": "default"
    },
    {
      "name": "add-url-to-history",
      "context": {
        "horizontal-tabs": {
          "tab-pattern": {
            "appearance": "horizontal",
            "addUrlToHistory": true
          }
        }
      }
    }
  ]
}
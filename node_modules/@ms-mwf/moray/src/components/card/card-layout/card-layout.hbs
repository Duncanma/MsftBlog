<{{#if grid.layout-html-tag}}{{grid.layout-html-tag}}{{else}}div{{/if}} class="{{#if grid}}row {{#each grid.row-cols}}row-cols-{{{this}}} {{/each}}{{else}}card-{{layout}}{{/if}} {{~classes~}}">
  {{#> cards}}
    {{~#each cards}}
      {{~#if ../grid}}
        <div class="col {{col-classes}}">
      {{~/if}}
      {{~#if ../grid.card-classes}}
        {{~#if classes}}
          {{~#unless (contains classes ../grid.card-classes)}}
            {{setProp this 'classes' (math (math ../grid.card-classes '+' ' ') '+' classes)}}
          {{~/unless}}
        {{~else}}
          {{setProp this 'classes' ../grid.card-classes}}
        {{~/if}}
      {{~/if}}
      {{~#if horizontal}}
        {{render '@card--horizontal' this}}
      {{~else}}
        {{render '@card' this}}
      {{/if}}
      {{~#if ../grid}}
        </div>
      {{~/if}}
    {{~/each}}
  {{/cards}}
</{{#if grid.layout-html-tag}}{{grid.layout-html-tag}}{{else}}div{{/if}}>
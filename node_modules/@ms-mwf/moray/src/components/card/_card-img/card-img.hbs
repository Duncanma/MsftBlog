{{~#if classes~}}
  {{~#if custom-classes~}}
    {{~setProp this 'classes' classes~}}
  {{~else~}}
    {{~#unless (contains classes 'card-img')~}}
      {{~setProp this 'classes' (math 'card-img ' '+' classes)~}}
    {{~/unless~}}
  {{~/if~}}
{{~else~}}
  {{~setProp this 'classes' 'card-img'~}}
{{~/if~}}

{{~#> image}}
  {{> '@images--full-width-picture-element' this}}
{{~/image}}

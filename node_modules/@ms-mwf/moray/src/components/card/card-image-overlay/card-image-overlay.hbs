<div class="card-img-overlay {{wrapper.classes}}" {{#if use-click-group}} data-mount="click-group"{{/if}}>
  <div class="card-background {{background.classes}}">
    {{render '@card-img' background.image}}
  </div>
  <div class="card-foreground {{foreground.classes}}">
    {{#if foreground.default-card}}
      {{render '@card' foreground.default-card}}
    {{else}}
      {{> @partial-block}}
    {{/if}}
  </div>
</div>
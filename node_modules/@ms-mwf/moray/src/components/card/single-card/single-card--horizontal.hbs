<div class="card{{#if offset}}-offset{{#if offset.small}} card-offset-small{{/if}}{{#unless right.image}} flipped{{/unless}}{{/if}} {{classes}}" {{{htmlAttr attributes}}}>
  <div class="row {{row-classes}}">
    {{#if left}}
      <div class="{{#if left.col-classes}}{{left.col-classes}}{{else}}col{{/if}}" {{{htmlAttr left.attributes}}}>
        {{~#if left.image}}{{> '@card-img' left.image}}{{/if~}}
        {{~#if left.header}}{{> '@card-header' left.header}}{{/if~}}
        {{~#if left.body}}{{> '@card-body' left.body}}{{/if~}}
        {{~#if left.footer}}{{> '@card-footer' left.footer}}{{/if~}}
      </div>
    {{/if}}
    {{#if right}}
      <div class="{{#if right.col-classes}}{{right.col-classes}}{{else}}col{{/if}}" {{{htmlAttr right.attributes}}}>
        {{~#if right.image}}{{> '@card-img' right.image}}{{/if~}}
        {{~#if right.header}}{{> '@card-header' right.header}}{{/if~}}
        {{~#if right.body}}{{> '@card-body' right.body}}{{/if~}}
        {{~#if right.footer}}{{> '@card-footer' right.footer}}{{/if~}}
      </div>
    {{/if}}
  </div>
</div>

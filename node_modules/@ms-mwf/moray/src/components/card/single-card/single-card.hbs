<div class="card{{#if offset}}-offset {{#if offset.small}}card-offset-small{{/if}} {{#unless image.bottom}}flipped{{/unless}}{{/if}} {{classes}}" {{{htmlAttr attributes}}}>
  {{~#if image}}
    {{~#unless image.bottom}}
      {{> '@card-img' image}}
    {{~/unless}}
  {{~/if}}
  {{#if header}}
    {{> '@card-header' header}}
  {{/if}}
  {{> '@card-body' body}}
  {{#if footer}}
    {{> '@card-footer' footer}}
  {{/if}}
  {{~#if image.bottom}}
    {{> '@card-img' image}}
  {{~/if}}
</div>

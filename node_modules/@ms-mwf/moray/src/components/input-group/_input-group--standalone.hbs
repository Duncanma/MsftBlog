<div class="input-group mb-3 {{classes}}">
  {{#if prepend }}
  <div class="input-group-prepend">
    {{#if prepend.content}}
    <span class="input-group-text" id="{{prepend.id}}">{{{prepend.content}}}</span>
    {{else if prepend.template}}
      {{{partial prepend.template.name prepend.template.data}}}
    {{/if}}
  </div>
  {{/if }}
  <{{#if inputType}}{{{inputType}}}{{else}}input type="text"{{/if}} class="form-control" {{{htmlAttr attributes}}}>{{#if inputType}}</{{inputType}}>{{/if}}
  {{#if append }}
  <div class="input-group-append">
    {{#if append.content}}
    <span class="input-group-text" id="{{append.id}}">{{{append.content}}}</span>
    {{else if append.template}}
      {{{partial append.template.name append.template.data}}}
    {{/if}}
  </div>
  {{/if}}
</div>

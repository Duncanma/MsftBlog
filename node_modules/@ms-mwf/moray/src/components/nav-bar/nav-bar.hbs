{{setVar 'id' (evaluate id '||' (uid))~}}

<div class="nav-bar {{classes}}">
  <div class="container">
    {{#with logo}}
    <a href="{{link.href}}" class="nav-bar-brand ml-lg-ng">
      {{#with image}}
      {{> '@images' classes="img-fluid"}}
      {{/with}}
    </a>
    {{/with}}

    <button class="nav-bar-toggler" type="button" data-mount="collapse" data-target="#{{getVar 'id'}}" aria-controls="{{getVar 'id'}}" aria-haspopup="true" aria-expanded="false" aria-label="{{aria-label}}">
      <span class="nav-bar-toggler-icon"></span>
    </button>
    <div class="collapse nav-bar-collapse" id="{{getVar 'id'}}">
      {{#with nav}}
      <nav{{#if ../search}} class="mr-auto"{{/if}} aria-label="{{aria-label}}">
        {{> '@nav--horizontal' nav-element=nav-element nav-items=nav-items}}
      </nav>
      {{/with}}

      {{#if search}}
      <form role="search" class="my-2 mx-g my-lg-0 mr-lg-0">
        <div class="input-group">
          <input type="text" class="form-control border-right-0 px-g py-2" autocomplete="off">
          <div class="input-group-append">
            <button class="btn border-neutral-400 bg-body glyph-append glyph-append-search border-left-0 pl-2" type="submit" aria-label="submit search"></button>
          </div>
        </div>
      </form>
      {{/if}}
    </div>
  </div>
</div>

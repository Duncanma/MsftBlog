{{!-- 
  Variation logic: 
    1. number of pages is 6 or 7
--}}
<nav aria-label="{{#if aria-label}}{{aria-label}}{{else}}Pagination for search results{{/if}}: {{size}} {{#ifCond size '==' 1}}page{{else}}pages{{/ifCond}}">
  <ul class="pagination pagination-segment-start pagination-edge">
    {{!-- if active page is page 1, disable previous button --}}
    {{#ifCond activePage '==' 1}}
    <li class="page-item disabled">
      <span class="page-link">Previous</span>
    </li>
    {{else}}
    <li class="page-item">
      <a href="#" class="page-link">Previous</a>
    </li>
    {{/ifCond}}
    {{#for 0 size 1}}
    {{!-- if page size is 6 or 7, add ellipsis before page number 6 --}}
    {{#ifCond @indexPlusOne '==' 6}}
    {{#compareOr ../../size 6 ../../size 7}}
    <li class="page-item disabled ellipsis">
      <span class="page-link text-body">...</span>
    </li>
    {{/compareOr}}
    {{/ifCond}}            
    {{#ifCond @indexPlusOne '==' ../activePage}}
    <li class="page-item active" aria-current="page">
      <a class="page-link"><span>{{@indexPlusOne}}</span></a>
    </li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="#"><span>{{@indexPlusOne}}</span></a>
    </li>
    {{/ifCond}}
    {{/for}}
    {{!-- if active page is (page size - 1), disable next button --}}
    {{#ifCond activePage '==' size}}
    <li class="page-item disabled">
      <span class="page-link">Next</span>
    </li>
    {{else}}
    <li class="page-item">
      <a href="#" class="page-link">Next</a>
    </li>
    {{/ifCond}}
  </ul>
</nav>

{{!-- 
  Variation logic: 
    1. more than 7 pages
    2. active page number is between 1 - 5 (inclusive)
--}}
<nav aria-label="{{#if aria-label}}{{aria-label}}{{else}}Pagination for search results{{/if}}: {{size}} {{#ifCond size '==' 1}}page{{else}}pages{{/ifCond}}">
  <ul class="pagination pagination-segment-middle">
    <li class="page-item">
      <a href="#" class="page-link">Previous</a>
    </li>        
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Go to first page"><span>1</span></a>
    </li>
    <li class="page-item disabled ellipsis">
      <span class="page-link text-body">...</span>
    </li>        
    {{!-- display only the first 5 page numbers --}}
    {{#for loop.start loop.end 1}}      
    {{#ifCond @index '==' ../activePagePrev}}
    <li class="page-item ellipsis-after">
      <a class="page-link" href="#"><span>{{@index}}</span></a>
    </li>
    {{/ifCond}}
    {{#ifCond @index '==' ../activePage}}
    <li class="page-item active" aria-current="page">
      <a class="page-link"><span>{{@index}}</span></a>
    </li>
    {{/ifCond}}
    {{#ifCond @index '==' ../activePageNext}}
    <li class="page-item ellipsis-before">
      <a class="page-link" href="#"><span>{{@index}}</span></a>
    </li>
    {{/ifCond}}
    {{/for}}
    <li class="page-item disabled ellipsis">
      <span class="page-link text-body">...</span>
    </li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Go to last page"><span>{{size}}</span></a>
    </li>
    <li class="page-item">
      <a href="#" class="page-link">Next</a>
    </li>
  </ul>
</nav>

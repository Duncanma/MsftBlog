{{#if nav-element}}
  {{setProp this 'html-tag' 'nav'}}
{{else}}
  {{setProp this 'html-tag' 'div'}}
{{/if}}

<{{html-tag}} class="nav-container" {{{htmlAttr attributes}}}>
  <ul class="nav{{#ifCond type '==' "nav-bar"}}-bar-nav{{/ifCond}}{{#ifCond direction '==' "vertical"}} flex-column align-items-start{{/ifCond}} {{classes}}">
    {{#with nav-bar-brand}}
    <li{{#if divider-prepend}} class="nav-bar-divider-prepend"{{/if}}>
      {{#with link}}
      <a href="#" class="nav-bar-brand">
        {{text}}
      </a>
      {{/with}}
    </li>
    {{/with}}
    {{#each nav-items}}
      {{#unless dropdown}}
      <li class="nav-item{{#if active}} active{{/if}} {{classes}}">
        {{#with link}}
        <a class="nav-link {{classes}}"{{#if ../active}} aria-current="true"{{else}} href="{{href}}"{{/if}}>{{#if glyph}}<span class="glyph-prepend glyph-prepend-{{glyph}}">{{/if}}{{text}}{{#if glyph}}</span>{{/if}}</a>
        {{/with}}
      </li>
      {{else}}
        {{render '@dropdown--navigation' dropdown merge=true}}
      {{/unless}}
    {{/each}}
  </ul>
</{{html-tag}}>

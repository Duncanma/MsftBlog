{{#if single}}
  <div class="show-more-show-less {{classes}}" {{{htmlAttr container.attributes}}}>
    <div>
      <{{tag}}>
        {{{visible-text}}}
      </{{tag}}>
      {{#if ellipses}}
        <span class="show-more-show-less-ellipsis">...</span>
      {{/if}}
      <{{tag}} id="{{toggleable-text.id}}" class="show-more-show-less-toggleable-content">
        {{{toggleable-text.text}}}
      </{{tag}}>
    </div>
    {{render '@action-trigger' control}}
  </div>
{{else}}
  <div class="show-more-show-less {{classes}}" {{{htmlAttr container.attributes}}}>
    <{{tag}} id="{{content-container.id}}" class="show-more-show-less-toggleable-content {{content-container.classes}}">
      {{#each content}}
        {{{this}}}
      {{/each}}
    </{{tag}}>
    {{render '@action-trigger' control}}
  </div>
{{/if}}

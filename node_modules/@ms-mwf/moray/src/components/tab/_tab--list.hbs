<div class="row">
  <div
    data-mount="tab-slider"
    class="col-12
    {{~#ifCond appearance '!==' 'images'}} tab-{{../appearance}}{{/ifCond~}}
    {{~#ifCond tab-list.theme-color '==' 'primary'}} tab-primary{{/ifCond~}}"
    {{~#unless tab-list.scroll-into-view}}data-disable-scroll-into-view{{/unless}}
  >

    <div class="tab-overflow">
      <div class="tab-window">
        <div class="tab-group {{tab-list.alignment}} {{~#ifCond tab-list.direction '==' 'vertical'}} tab-vertical{{/ifCond}}"
        role="tablist" aria-label="{{tab-list.aria-label}}" {{#if addUrlToHistory}}data-add-url-to-history{{/if}}>
          {{#each tab-group}}
          <a id="{{tab-element.id}}-tab"
            class="
              {{~#if active}}active {{/if}}
              {{~#ifCond ../appearance '!==' 'images'}}
                {{~#if ../tab-element.glyph-classes}}{{../tab-element.glyph-classes}}{{/if}}
              {{~else}}tab-image tab-image-{{../../images.size}}{{/ifCond~}}
            "
            href="#{{tab-element.id}}"
            role="tab"
            data-mount="tab"
            aria-controls="{{tab-element.id}}"
            aria-selected="{{#if active}}true{{else}}false{{/if}}"
            {{#ifCond active '!=' true}}tabindex="-1"{{/ifCond}}
            {{#ifCond ../appearance '==' 'images'}}aria-label="{{../tab-element.text}}"{{/ifCond}}
          >
            {{#if ../images}}
            <div class="tab-image-border">
              {{> '@images--full-width-picture-element' ../images}}
            </div>
            {{/if}}
            <span {{#ifCond ../appearance '==' 'images'}}class="tab-image-label"{{/ifCond}}>{{tab-element.text}}</span>
          </a>
         {{/each}}
        </div>
      </div>
    </div>
    <div class="tab-arrows
      {{~#ifCond images.size '==' 'md'}} tab-arrows-lg{{/ifCond}}
      {{~#ifCond images.size '==' 'xl'}} tab-arrows-lg{{/ifCond}}"
    >
      <button class="arrow-prev" tabindex="-1" aria-hidden="true" data-width="40">
        <span class="sr-only">Previous</span>
      </button>
      <button class="arrow-next" tabindex="-1" aria-hidden="true" data-width="40">
        <span class="sr-only">Next</span>
      </button>
    </div>
  </div>
</div>

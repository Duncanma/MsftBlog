<div class="row">
  <div class="col-12 {{~#ifCond direction '==' 'vertical'}} col-md-9{{/ifCond}}">
    <div class="tab-panel-group">
      {{#each tab-group}}
      <div id="{{tab-panel.tab-id}}" class="tab-panel fade {{#if active}}show active{{/if}}" role="tabpanel" aria-labelledby="{{tab-panel.tab-id}}-tab" tabindex="0"
      {{#unless active}}hidden{{/unless}}>
      {{#if tab-panel.heading}}
      <h3 class="h2 mb-5 {{{tab-panel.heading.alignment}}}">{{{tab-panel.heading.text}}}</h3>
      {{/if}}
      {{#if tab-panel.content.static}}
        {{{tab-panel.content.static}}}
      {{else}}
        {{#each tab-panel.content.handle}}
          <div class="mb-5">
            {{render (strConcat '@' this) merge=true}}
          </div>
        {{/each}}
        {{#each tab-panel.content.templates}}
          <div class="mb-5">
            {{render (strConcat '@' name) data merge=true}}
          </div>
        {{/each}}
      {{/if}}
      </div>
      {{/each}}
      {{render '@button--link' button merge=true}}
      {{#if horizontal-rule}}
        {{render '@divider' horizontal-rule}}
      {{/if}}
    </div>
  </div>
</div>

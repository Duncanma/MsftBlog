{{#if toolbar }}
<div class="btn-toolbar" role="toolbar" {{{htmlAttr toolbar.attributes}}}>
{{/if}}
{{#each groups}}
<div class="btn-group{{#if this.style}}-{{this.style}}{{/if}} {{#if this.size}}btn-group-{{this.size}} {{/if}}{{this.classes}}" role="group" {{{htmlAttr this.attributes}}}>
  {{#each this.dropdowns}}
    {{render '@dropdown' this merge=true}}
  {{/each}}
  {{#each this.groups}}
    <div class="btn-group{{#if this.style}}-{{this.style}}{{/if}} {{#if this.size}}btn-group-{{this.size}} {{/if}}{{this.classes}}" role="group" {{{htmlAttr this.attributes}}}>
    {{#each this.dropdowns}}
      {{> @dropdown}}
    {{/each}}
    {{#each this.buttons}}
      {{> @button}}
    {{/each}}
  </div>
  {{/each}}
  {{#each this.buttons}}
    {{> @button}}
  {{/each}}
</div>
{{/each}}
{{#if toolbar }}
</div>
{{/if}}

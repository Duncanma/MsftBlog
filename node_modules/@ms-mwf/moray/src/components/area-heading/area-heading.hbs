<div class="area-heading {{#if centered}}text-md-center{{/if}} {{classes}}" {{{htmlAttr attributes}}}>
  <div class="row">
    <div class="col-12 col-md-8 {{#if centered}}mx-auto{{/if}}">
        {{#if inline-image}} 
          <div class="{{inline-image.heading-class}}">
            {{render '@images' images}} 
            {{render '@headings' headings}}
          </div>
        {{else}}
          {{#if images}}{{render '@images' images}}{{/if}}
          {{render '@headings' headings}}
        {{/if}}
    </div>
    {{#if has-body}}
      <div class="col-12 col-md-8 col-xl-6 {{#if centered}}mx-auto{{/if}}">
        {{#if subheading}}{{render '@headings' subheading merge=true}}{{/if}}
        {{#if paragraphs}}{{render '@paragraphs' paragraphs merge=true}}{{/if}}
        {{#if link-group}}{{render '@link-group' link-group}}{{/if}}
      </div>
    {{/if}}
  </div>
</div>

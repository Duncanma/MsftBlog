<{{~#if announcement-bar}}section{{else}}div{{/if}}
  class="alert {{classes~}}
    {{~#if full-width}} alert-full-bleed{{/if~}}
    {{~#if theme-color}} material-color-{{theme-color}}{{/if~}}
    {{~#if dismissible}} alert-dismissible fade show{{/if~}}"
    {{~#if aria-label}} aria-label="{{aria-label}}"{{/if~}}
    {{~#if clickable}} data-mount="click-group"{{/if~}}
    {{~#unless only-style}} role="alert" aria-live="{{aria-live}}"{{/unless~}} {{{htmlAttr wrapperAttr}}}>

  {{~#if glyph}}<span class="glyph-prepend glyph-prepend-{{glyph}}" aria-hidden="true"></span>{{/if~}}
  <{{#if content-tag}}{{content-tag}}{{else}}div{{/if}} {{{htmlAttr contentAttr}}} class="alert-content {{~content-classes~}}">
    {{~#if heading}}
      {{> '@headings' text=heading.text html-tag=heading.html-tag classes="alert-heading"}}
    {{/if~}}
    {{#if body}}
      {{#each body}}
        {{#if paragraph}}<p>{{{paragraph.content}}}</p>{{/if}}
        {{#if hr}}{{render '@divider' hr}}{{/if}}
      {{/each}}
    {{else}}
      {{#> body-partial}}{{/body-partial}}
    {{/if}}
  </{{#if content-tag}}{{content-tag}}{{else}}div{{/if}}>

    {{#if dismissible}}
      {{setProp this 'close' (evaluate close '||' (object aria-label="Close alert"))}}
      {{setProp close 'attributes' (evaluate close.attributes '||' (object))}}
      {{setProp close.attributes 'data-dismiss' 'alert'}}
      {{render '@close' close merge=true}}
    {{/if}}
</{{~#if announcement-bar}}section{{else}}div{{/if~}}>


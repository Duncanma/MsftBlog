
<div class="link-group{{#if classes}} {{classes}}{{/if}}">
  {{#each links}}
    {{#if button}}
      {{#if (evaluate ../color-scheme '==' 'brand-dark')}}
        {{#with button}}
          {{> '@button' color='brand-light'}}
        {{/with}}
      {{else if (evaluate ../color-scheme '==' 'brand')}}
        {{#with button}}
          {{#if style}}
            {{#if (evaluate style '==' 'inverted')}}
              {{> '@button' color='brand'}}
            {{else}}
              {{> '@button' color='light'}}
            {{/if}}
          {{else}}
            {{> '@button' color='brand' style="inverted"}}
          {{/if}}
        {{/with}}
      {{else}}
        {{render '@button' button merge=true}}
      {{/if}}
    {{else if action-trigger}}
      {{render '@action-trigger' action-trigger}}
    {{else if cta}}
      {{render '@call-to-action' cta merge=true}}
    {{else}}
      <a href="{{href}}" class="{{classes}} {{#if ../color}}text-{{../color}}{{/if}}" {{{htmlAttr attributes}}}>{{#if images}}{{render '@images' images }}{{else}}{{text}}{{/if}}</a>
    {{/if}}
  {{/each}}
</div>

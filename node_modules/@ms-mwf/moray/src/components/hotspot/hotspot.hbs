{{#if image}}{{render '@images--full-width-picture-element' image merge=true}}{{/if}}
<button {{#if id}} id="{{id}}" {{/if~}}
  class="hotspot
    {{~#unless no-hover-ripple}} hotspot-hover-ripple{{/unless~}}
    {{~#if color}} hotspot-{{color}}{{/if~}}
    {{~#if size}} hotspot-{{size}}{{/if~}}
    {{~#if glyph-modifier}} hotspot-{{glyph-modifier}}{{/if~}}
    {{~#if active}} hotspot-active{{/if~}}
    {{~#if ripple}} hotspot-ripple{{/if~}}
    {{~#if extra-border}} hotspot-extra-border{{/if~}}"
  aria-label="Placeholder for explicit label"
  title="Placeholder title"
  {{~#if attributes}} {{{htmlAttr attributes}}}{{/if~}}
>
  {{text}}
  {{~#if glyph}}<span class="glyph-prepend glyph-prepend-{{glyph}}"></span>{{/if~}}
  {{~#if hotspot-image}}{{render '@images--responsive' hotspot-image}}{{/if~}}
</button>
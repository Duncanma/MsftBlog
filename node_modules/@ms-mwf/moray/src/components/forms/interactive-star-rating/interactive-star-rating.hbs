{{~setVar "id" (evaluate id '||' (uid))}}

{{#>@radio-group radio-group~}}
  {{~#*inline "inputs-partial"~}}
    <div class="form-star" data-mount="form-star" data-checked-label="{{../id}}-label">
      {{#for 0 ../stars 1}}
        <input type="radio" class="form-star-input{{#if ../../disabled}}{{#ifCond ../../checked '==' @indexPlusOne}} disabled{{/ifCond}}{{/if}}"
          id="{{../../id}}-{{@indexPlusOne}}"
          name="{{../../name}}"
          value="{{@indexPlusOne}}"
          {{#ifCond @index '===' 0~}}
            {{~#if ../../../required}}data-form-check-required="true"{{/if~}}
            {{~#if ../../../feedback.id}}data-feedback="{{../../../feedback.id}}"{{/if}}
            {{~#if ../../../feedback.content}}data-feedback-content="{{../../../feedback.content}}"{{/if}}
          {{~/ifCond}}
          {{#if ../../disabled}}
            {{#ifCond ../../checked '!==' @indexPlusOne}}disabled{{/ifCond}}
            {{#ifCond ../../checked '!==' @indexPlusOne}} aria-hidden="true"{{/ifCond}}
          {{/if}}
          {{#ifCond ../../checked '==' @indexPlusOne}}checked{{/ifCond}}>
        <label class="form-star-label" for="{{../../id}}-{{@indexPlusOne}}">
          <span class="form-star-text">{{@indexPlusOne}} star{{#ifCond @index '>' 0}}s{{/ifCond}}</span>
          <span class="form-star-glyph" aria-hidden="true"></span>
        </label>
      {{/for}}
      <span aria-hidden="true" class="form-star-checked-label" id="{{../id}}-label">{{../checked-label.text}}</span>
    </div>
    {{#if ../feedback}}{{render '@form-feedback' ../feedback}}{{/if}}
  {{~/inline~}}
{{~/@radio-group}}

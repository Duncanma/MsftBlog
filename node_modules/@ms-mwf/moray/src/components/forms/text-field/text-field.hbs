{{setVar "id" (evaluate id '||' (uid))}}
{{#if label}}
<label for="{{getVar 'id'}}" {{#if label.classes}}class="{{label.classes}}"{{/if}}>{{#if label.text}}{{{label.text}}}{{else}}Label text{{/if}}</label>
{{/if}}
{{#if textarea}}
<textarea class="form-control {{classes}} {{#if invalid}}is-invalid{{/if}}" id="{{getVar 'id'}}" {{#if name}}name="{{name}}"{{/if}} {{{htmlAttr attributes}}}>{{value}}</textarea>
{{else}}
<input class="form-control {{classes}} {{#if invalid}}is-invalid{{/if}}" type="{{type}}" id="{{getVar 'id'}}" {{#if name}}name="{{name}}"{{/if}} {{{htmlAttr attributes}}} {{#if value}}value="{{value}}"{{/if}}>
{{/if}}

{{setVar "id" (evaluate id '||' (uid))}}
<label for="{{getVar 'id'}}" class="{{label.classes}}">{{{label.text}}}</label>
<div class="custom-select {{wrapper.classes}}">
  <select class="custom-select-input {{classes}}" id="{{getVar 'id'}}" {{{htmlAttr attributes}}}>
    {{#each options}}
    <option value="{{value}}"{{#if selected}} selected{{/if}}{{#if disabled}} disabled{{/if}}>{{text}}</option>
    {{/each}}
  </select>
  <span class="custom-select-arrow" aria-hidden="true"></span>
</div>

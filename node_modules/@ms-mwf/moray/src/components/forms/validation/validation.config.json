{
  "title": "Validation",
  "status": "ready",
  "default": "default",
  "preview": "@preview-grid",
  "context": {
    "title": {
      "html-tag": "h2",
      "text": "Sample form"
    },
    "submit": {
      "color": "primary",
      "text": "Submit",
      "classes": "form-group",
      "attributes": {
        "type": "submit",
        "id": "form-submit-btn"
      }
    }
  },
  "variants": [
    {
      "name": "default",
      "context": {
        "form": [
          {
            "form-group": {
              "select": {
                "label": {
                  "text": "<span aria-hidden=\"true\">*</span> Category"
                },
                "attributes": {
                  "required": true,
                  "aria-describedby": "select-cat-hint catSelect-feedback",
                  "data-feedback-content": "You must select a category.",
                  "data-feedback": "catSelect-feedback",
                  "aria-invalid": "false"
                },
                "options": [
                  {
                    "value": "",
                    "text": "Select one"
                  },
                  {
                    "value": "hardware",
                    "text": "Hardware"
                  },
                  {
                    "value": "software",
                    "text": "Software"
                  }
                ]
              },
              "hint": {
                "content": "select hint text",
                "attributes": {
                  "id": "select-cat-hint"
                }
              }
            }
          },
          {
            "radio-group": {
              "legend": {
                "text": "<span aria-hidden=\"true\">*</span><span class=\"sr-only\">Required</span> Do you like the Microsoft Store?",
                "attributes": {
                  "id": "likeLegend"
                }
              },
              "name": "like",
              "attributes": {
                "aria-labelledby": "likeLegend likeFeedback"
              },
              "radios": [
                {
                  "label": {
                    "text": "Yes"
                  },
                  "value": "yes",
                  "attributes": {
                    "data-form-check-required": "true",
                    "data-feedback-content": "You must select if you liked Microsoft Store.",
                    "data-feedback": "likeFeedback",
                    "aria-invalid": "false"
                  }
                },
                {
                  "label": {
                    "text": "No"
                  },
                  "value": "no",
                  "attributes": {
                    "aria-invalid": "false"
                  }
                }
              ]
            }
          },
          {
            "radio-group": {
              "legend": {
                "text": "<span aria-hidden=\"true\">*</span><span class=\"sr-only\">Required</span> How did you hear about us? (select up to 3)",
                "attributes": {
                  "id": "hearLegend"
                }
              },
              "name": "hear",
              "attributes": {
                "aria-labelledby": "hearLegend hearFeedback"
              },
              "radios": [
                {
                  "label": {
                    "text": "Search engine"
                  },
                  "value": "search",
                  "type": "checkbox",
                  "attributes": {
                    "data-feedback-content": "Between one and three ways you've heard about us must be selected.",
                    "data-feedback": "hearFeedback",
                    "data-form-check-required": 1,
                    "data-form-check-max": 3,
                    "aria-invalid": "false"
                  }
                },
                {
                  "label": {
                    "text": "Social media"
                  },
                  "value": "social",
                  "type": "checkbox",
                  "attributes": {
                    "aria-invalid": "false"
                  }
                },
                {
                  "label": {
                    "text": "TV"
                  },
                  "value": "tv",
                  "type": "checkbox",
                  "attributes": {
                    "aria-invalid": "false"
                  }
                },
                {
                  "label": {
                    "text": "Word of mouth"
                  },
                  "value": "mouth",
                  "type": "checkbox",
                  "attributes": {
                    "aria-invalid": "false"
                  }
                }
              ]
            }
          },
          {
            "form-group": {
              "form-control": {
                "label": {
                  "text": "<span aria-hidden=\"true\">*</span> Title"
                },
                "id": "input-title-element",
                "character-count": {
                  "status-msg-template": "%{remaining} of %{max} characters remaining",
                  "max-msg-template": "Maximum character count reached",
                  "data-sr-low-char-warning-lvl": "5",
                  "id": "input-title-char-count-block",
                  "target-id": "input-title-element"
                },
                "attributes": {
                  "required": true,
                  "aria-describedby": "input-title-hint input-title-feedback",
                  "data-feedback-content": "You must enter a title.",
                  "data-feedback": "input-title-feedback",
                  "maxlength": 30,
                  "aria-invalid": "false"
                }
              },
              "hint": {
                "content": "Sample hint text",
                "attributes": {
                  "id": "input-title-hint"
                }
              }
            }
          },
          {
            "form-group": {
              "form-control": {
                "label": {
                  "text": "Description"
                },
                "textarea": true,
                "id": "textarea-description-element",
                "character-count": {
                  "status-msg-template": "%{remaining} of %{max} characters remaining",
                  "max-msg-template": "Maximum character count reached",
                  "data-sr-low-char-warning-lvl": "5",
                  "id": "textarea-description-char-count-block",
                  "target-id": "textarea-description-element"
                },
                "attributes": {
                  "maxlength": 160
                }
              }
            }
          },
          {
            "form-group": {
              "form-control": {
                "label": {
                  "text": "<span aria-hidden=\"true\">*</span> Address line 1"
                },
                "attributes": {
                  "autocomplete": "shipping address-line1",
                  "required": true,
                  "aria-describedby": "input-address1-feedback",
                  "data-feedback-content": "You must enter an address line 1.",
                  "data-feedback": "input-address1-feedback",
                  "aria-invalid": "false"
                }
              }
            }
          },
          {
            "form-group": {
              "form-control": {
                "label": {
                  "text": "Address line 2"
                },
                "attributes": {
                  "autocomplete": "shipping address-line2"
                }
              }
            }
          },
          {
            "form-group": {
              "form-row": {
                "columns": [
                  {
                    "span": "5",
                    "form-control": {
                      "label": {
                        "text": "<span aria-hidden=\"true\">*</span> City"
                      },
                      "attributes": {
                        "required": true,
                        "autocomplete": "shipping address-level2",
                        "aria-describedby": "input-city-feedback",
                        "data-feedback-content": "You must enter a city.",
                        "data-feedback": "input-city-feedback",
                        "aria-invalid": "false"
                      }
                    }
                  },
                  {
                    "select": {
                      "label": {
                        "text": "<span aria-hidden=\"true\">*</span> State"
                      },
                      "attributes": {
                        "required": true,
                        "autocomplete": "shipping address-level1",
                        "aria-describedby": "stateSelect-feedback",
                        "data-feedback-content": "You must select a state.",
                        "data-feedback": "stateSelect-feedback",
                        "aria-invalid": "false"
                      },
                      "options": [
                        {
                          "value": "",
                          "text": "Select one"
                        },
                        {
                          "value": "al",
                          "text": "AL"
                        },
                        {
                          "value": "ak",
                          "text": "AK"
                        },
                        {
                          "value": "az",
                          "text": "AZ"
                        },
                        {
                          "value": "...",
                          "text": "..."
                        },
                        {
                          "value": "wa",
                          "text": "WA"
                        },
                        {
                          "value": "wi",
                          "text": "WI"
                        },
                        {
                          "value": "wy",
                          "text": "WY"
                        }
                      ]
                    }
                  },
                  {
                    "form-control": {
                      "label": {
                        "text": "<span aria-hidden=\"true\">*</span> ZIP"
                      },
                      "attributes": {
                        "required": true,
                        "autocomplete": "shipping postal-code",
                        "aria-describedby": "input-zip-hint input-zip-feedback",
                        "data-feedback-content": "You must enter a valid US zip code.",
                        "data-feedback": "input-zip-feedback",
                        "aria-invalid": "false",
                        "pattern": "(\\d{5}([\\-]\\d{4})?)"
                      }
                    },
                    "hint": {
                      "content": "A hint about zips.",
                      "attributes": {
                        "id": "input-zip-hint"
                      }
                    }
                  }
                ],
                "feedback": [
                  "input-city-feedback",
                  "stateSelect-feedback",
                  "input-zip-feedback"
                ]
              }
            }
          },
          {
            "form-group": {
              "checkbox": {
                "label": {
                  "text": "Send me the weekly newsletter"
                }
              }
            }
          },
          {
            "legal": "Your reviews, ratings, and name may be posted publicly on Microsoft and/or third-party applications and websites. By submitting a rating and/or a review, you agree to the <a href=\"#\">Terms of Sale</a>."
          }
        ]
      }
    },

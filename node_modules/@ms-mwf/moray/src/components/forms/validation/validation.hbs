<form data-mount="validation" novalidate>
{{#if error-refresh}}{{render '@alert--dismissible' error-refresh merge=true}}{{/if}}
{{#if title}}{{render '@headings' title}}{{/if}}
<p class="text-muted" aria-hidden="true">* Please complete required fields to submit.</p>
{{#each form}}
  {{#if form-group}}{{render '@form-group' form-group}}{{/if}}
  {{#if radio-group}}{{render '@radio-group' radio-group}}{{/if}}
  {{#if legal}}{{> '@paragraphs' classes="form-group small text-muted" content=legal}}{{/if}}
  {{#if button}}{{render '@button' button}}{{/if}}
{{/each}}
{{> '@validation--feedback-list' headings=(object html-tag="h3" size="h6")}}
{{#if error}}{{render '@alert--dismissible' error merge=true}}{{/if}}
{{render '@button' submit}}
</form>

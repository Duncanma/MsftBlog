{{#if legend}}
  {{setProp legend 'attributes' (evaluate legend.attributes '||' (object))}}
  {{setVar 'legendId' (evaluate legend.attributes.id '||' (uid))}}
{{/if}}
<fieldset
  class="form-group {{classes}}"
  {{#if legend}}{{#unless attributes.aria-labelledby}}aria-labelledby="{{getVar 'legendId'}}"{{/unless}}{{/if}}
  {{{htmlAttr attributes}}}>
  {{#if legend}}
    <legend
      class="{{legend.classes}}"
      {{#unless legend.attributes.id}}id="{{getVar 'legendId'}}"{{/unless}}
      {{{htmlAttr legend.attributes}}}>
        {{{legend.text}}}
    </legend>
  {{/if}}
    {{~#> inputs-partial}}
      {{#each radios}}
        {{setProp this "inline" ../this.inline}}
        {{setProp this "name" ../this.name}}
        {{setProp this "value" (evaluate value '||' (math 'opt' '+' (math @index '+' 1)))}}
        {{render '@checkbox-radio--radio' this merge=true}}
      {{/each}}
    {{~/inputs-partial}}
  {{#if radios.0.attributes.data-feedback}}{{> '@form-feedback' id=radios.0.attributes.data-feedback classes="ml-4"}}{{/if}}
</fieldset>

{{setVar "id" (evaluate id '||' (uid))}}

{{#if label}}
  <label for="{{getVar 'id'}}" class="{{label.classes}}" {{{htmlAttr label.attributes}}}>
    {{#if label.glyph}}
      <span class="{{label.glyph.classes}}" aria-hidden="true"></span>
    {{/if}}
    {{{label.text}}}
  </label>
{{/if}}
<div class="custom-range">
  <input type="range" class="custom-range-input {{classes}}" id="{{getVar 'id'}}" {{{htmlAttr attributes}}}>
  {{#if track-labels}}
    <div class="custom-range-track-labels" aria-hidden="true">
      {{#each track-labels}}
        <span class="{{classes}}" {{{htmlAttr attributes}}}>{{text}}</span>
      {{/each}}
    </div>
  {{/if}}
</div>

<div class="form-row {{classes}}">
{{#unless columns}}
  {{!-- render example only --}}
  <div class="col">
    {{render '@text-field'}}
  </div>
  <div class="col">
    {{render '@text-field'}}
  </div>
{{/unless}}
{{#each columns}}
  <div class="{{#if span}}col-{{span}}{{else}}col{{/if}} {{classes}}">
    {{#if select}}
      {{render '@select' select merge=true}}
    {{else}}{{#if checkbox}}
      {{render '@checkbox-radio' checkbox merge=true}}
    {{else}}{{#if form-control}}
      {{render '@text-field' form-control merge=true}}
    {{/if}}{{/if}}{{/if}}
    {{#if hint}}{{> '@paragraphs' classes="form-text text-muted" content=hint.content attributes=hint.attributes}}{{/if}}
    {{#if form-control.attributes.data-feedback}}{{> '@form-feedback' id=form-control.attributes.data-feedback}}{{/if}}
    {{#if select.attributes.data-feedback}}{{> '@form-feedback' id=select.attributes.data-feedback}}{{/if}}
  </div>
{{/each}}
</div>

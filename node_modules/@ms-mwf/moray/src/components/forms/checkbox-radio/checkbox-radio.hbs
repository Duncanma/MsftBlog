{{setVar "id" (evaluate id '||' (uid))}}
<div class="custom-control custom-{{type}}{{#if inline}} custom-control-inline{{/if}} {{classes}}">
  <input
    type="{{type}}"
    class="custom-control-input
      {{~#unless label}} position-static{{/unless}}
      {{~#if invalid}} is-invalid{{/if}} {{input.classes}}"
    id="{{getVar 'id'}}"
    {{#if name}}name="{{name}}"{{/if}}
    {{#if value}}value="{{value}}"{{/if}}
    {{{htmlAttr attributes}}}>
  {{#if label}}
  <label class="custom-control-label {{label.classes}}" for="{{getVar 'id'}}"><span class="custom-control-glyph" aria-hidden="true"></span>
    {{~#if label.text~}}{{{label.text}}}
    {{~else if label.template}}{{{partial label.template label.template-data}}}
    {{~else~}}Label text
    {{~/if~}}
  </label>
  {{/if}}
</div>

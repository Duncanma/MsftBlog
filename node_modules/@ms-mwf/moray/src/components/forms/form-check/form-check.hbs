{{setVar "id" (evaluate id '||' (uid))}}
<div class="form-check{{#if inline}} form-check-inline{{/if}} {{classes}}">
  <input
    type="{{type}}"
    class="form-check-input
    {{~#unless label}} position-static{{/unless}}
    {{~#if invalid}} is-invalid{{/if}}"
    id="{{getVar 'id'}}"
    {{#if name}}name="{{name}}"{{/if}}
    {{#if value}}value="{{value}}"{{/if}}
    {{{htmlAttr attributes}}}>
  {{#if label}}
  <label class="form-check-label {{label.classes}}" for="{{getVar 'id'}}">
    {{~#if label.text~}}{{{label.text}}}
    {{~else if label.template}}{{{partial label.template label.template-data}}}
    {{~else~}}Label text
    {{~/if~}}
  </label>
  {{/if}}
</div>

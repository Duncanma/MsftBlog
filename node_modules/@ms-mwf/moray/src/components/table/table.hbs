{{#if table.responsive}}
  <div class="table-responsive">
{{/if}}
  <table class="table {{table.classes}}" {{#if table.presentational}}role="presentation"{{/if}}>
    {{#if table.caption.text}}
      <caption class="{{table.caption.classes}}">{{table.caption.text}}</caption>
    {{/if}}
    {{#if table.colgroup}}
      <colgroup>
        {{#each table.colgroup.cols}}
          <col class="{{this.classes}}" />
        {{/each}}
      </colgroup>
    {{/if}}
    {{#if table.head}}
      <thead class="{{table.head.classes}}">
        {{#each table.head.rows}}
          <tr>
            {{#each this.headers}}
              <th scope="col">{{this}}</th>
            {{/each}}
          </tr>
        {{/each}}
      </thead>
    {{/if}}
    {{#if table.body}}
      <tbody>
        {{#each table.body.rows}}
          <tr>
            {{#if this.header}}
              <th {{#unless @root.table.presentational}}scope="row"{{/unless}}>{{{this.header}}}</th>
            {{/if}}
            {{#each this.data}}
              <td>{{{this}}}</td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    {{/if}}
  </table>
{{#if table.responsive}}
  </div>
{{/if}}

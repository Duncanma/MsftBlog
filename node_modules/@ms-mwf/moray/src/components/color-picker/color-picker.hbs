{{#if background-image}}
<div style="width: 300px; height: 300px;" class="mt-4" id="color-picker-image-div"></div>
{{else if img}}
<img class="mt-4" src="{{colors.0.source}}" id="color-picker-image" alt="">
{{/if}}

<div class="{{#if img}}pt-4 pb-4 mt-4{{/if}}">
  <fieldset class="color-picker" data-mount="color-picker" {{#if background-image}}data-controls="color-picker-image-div"{{else}}data-controls="color-picker-image"{{/if}}>
    <legend class="sr-only">Choose your color</legend> 
    {{#each colors}}<input class="color-picker-control" name="color-picker-control" id="color-{{slug color-name}}" aria-label="{{color-name}}" type="radio" data-color-picker-image="{{source}}" {{#if checked}}checked{{/if}}><label for="color-{{slug color-name}}" aria-hidden="true" title="{{color-name}}">
      <span class="color-picker-dot" style="background-color: #{{color-hex}}">
        <svg viewBox="0 0 100 100"><circle cx="50" cy="50" r="50" fill="#{{color-hex}}" /></svg></span><span class="color-picker-label">{{color-name}}
      </span>
    </label>{{/each}}
  </fieldset>
</div>

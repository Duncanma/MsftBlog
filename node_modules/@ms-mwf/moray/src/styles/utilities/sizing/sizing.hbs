<div class="{{wrapper.classes}}" {{{htmlAttr wrapper.attributes}}}>
  {{#each size as |value key|}}
    <div class="{{../prefix}}-{{value}} {{../classes}}">{{../label}} {{key}}</div>
  {{/each}}
  {{#if columns}}
    {{#for 1 13 1 }}
      <div class="{{../prefix}}-col-{{@index}} {{../classes}}">{{../label}} col-{{@index}}</div>
    {{/for}}
  {{/if}}
  {{#if max}}
    <div class="m{{prefix}}-100 {{classes}}" {{{htmlAttr max.attributes}}}>Max {{label}} 100%</div>
  {{/if}}
  {{#if viewport}}
    <div class="v{{prefix}}-100 {{classes}}" {{{htmlAttr viewport.attributes}}}>Viewport {{label}} 100%</div>
  {{/if}}
  {{#if min-viewport}}
    <div class="min-v{{prefix}}-100 {{classes}}" {{{htmlAttr min-viewport.attributes}}}>Min Viewport {{label}} 100%</div>
  {{/if}}
</div>

{{#if responsive}}
  {{#each breakpoints as |bp bpKey|}}
    <div class="{{../wrapper.classes}}" {{{htmlAttr ../wrapper.attributes}}}>
    {{#each ../size as |value key|}}
      <div class="{{../../prefix}}-{{bp}}-{{value}} {{../../classes}}">{{../../label}} {{key}} at {{bpKey}}</div>
    {{/each}}
    {{#for 1 13 1 }}
      <div class="{{../../prefix}}-{{bp}}-col-{{@index}} {{../../classes}}">{{../../label}} col-{{@index}} at {{bpKey}}</div>
    {{/for}}
    </div>
  {{/each}}
{{/if}}
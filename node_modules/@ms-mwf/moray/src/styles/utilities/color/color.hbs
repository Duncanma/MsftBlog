{{#if palette.preset}}
<div class="row no-gutters">

  {{#each (getVar palette.preset) as |value key|}}
  <div class="col-12 col-sm-6 col-md-3 p-1">
    {{#unless (evaluate ../palette.preset '==' 'text-only')}}
    <div class="{{../prefix}}-{{value}} p-2">
      <p>{{key}}</p>
    </div>
    {{/unless}}
    {{#unless ../bg-only}}
      {{#unless (evaluate value "==" "transparent") }}
      <p class="text-{{value}} px-2">{{key}}</p>
      {{/unless}}
    {{/unless}}
  </div>
  {{/each}}
{{/if}}

{{#each palette as |item key|}}
  {{#unless (evaluate key "==" "preset") }}
  {{#if row}}<div class="row no-gutters {{row.classes}}" {{{htmlAttr row.attributes}}}>{{/if}}
    <div class="{{column.classes}}">
      <div class="{{../prefix}}-{{key}} {{swatch.classes}} p-2" {{{htmlAttr swatch.attributes}}}>
        <p>{{swatch.label}}</p>
      </div>
      {{#unless ../bg-only}}
        <p class="text-{{key}} px-2">{{key}}</p>
      {{/unless}}
    </div>

    {{#if item.responsive}}
      {{#each ../breakpoints as |bp bpKey|}}
        <div class="{{../column.classes}}">
          <!-- {{../../prefix}}-{{bp}}-{{key}} -->
          <div class="{{../../prefix}}-{{bp}}-{{key}} {{../swatch.classes}} h-100 p-2" {{{htmlAttr ../swatch.attributes}}}>
            <p>{{../swatch.label}} at {{bpKey}}</p>
          </div>
        </div>
      {{/each}}
    {{/if}}
  {{#if row}}</div>{{/if}}
  {{/unless}}
{{/each}}
</div>



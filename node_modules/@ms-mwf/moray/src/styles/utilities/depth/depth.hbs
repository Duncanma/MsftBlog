<div class="row{{#unless suffix}} mb-5{{/unless}}">
  {{#each depth as |value key|}}
  <div class="col-12 col-md d-flex{{#unless @last}} mb-3 mb-md-0{{/unless}}">
    <div class="{{../prefix}}-{{value}}{{#if ../suffix}}-{{../suffix}} position-relative{{/if}} w-100 p-3">
      {{../description}}: {{key}}
    </div>
  </div>
  {{/each}}
</div>

{{#unless suffix}}
{{#each breakpoints as |bp bpKey|}}
<div class="row {{#unless @last}} mb-5{{/unless}}">
  {{#each ../depth as |value key|}}
  <div class="col-12 col-md d-flex{{#unless @last}} mb-3 mb-md-0{{/unless}}">
    <div class="{{../../prefix}}-{{bp}}-{{value}} w-100 p-3">
      {{../../description}}: {{key}} at {{bpKey}}
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
{{/unless}}

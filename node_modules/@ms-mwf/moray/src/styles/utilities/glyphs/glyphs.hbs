{{#if glyphs-alignment}}
  <h2 class="h6 col-12">13px</h2>
  <div class="col-12 mt-3 mb-5 {{glyphs-alignment.classes}}">
    {{~#each glyphs}}
    {{~#unless (contains ../xsmall-banlist this) }}  
    <span class="glyph-prepend glyph-prepend-{{this}} glyph-prepend-xsmall"></span>
    {{/unless}}
    {{/each}}
  </div>

  <h2 class="h6 col-12">16px</h2>
  <div class="col-12 mt-3 mb-5 {{glyphs-alignment.classes}}">
    {{#each glyphs}}<span class="glyph-prepend glyph-prepend-{{this}}"></span>{{/each}}
  </div>
      
  <h2 class="h6 col-12">5em</h2>
  <div class="col-12 mt-5 {{glyphs-alignment.classes}}">
    {{#each glyphs}}<span style="font-size: 5em;" class="glyph-prepend glyph-prepend-{{this}}"></span>{{/each}}
  </div>

{{else}}
  <ul class="glyphs-list">
  {{#each glyphs}}
    <li>
      <p class="glyph-prepend glyph-prepend-{{this}}"> {{this}}</p>
    </li>
  {{/each}}
  </ul>

  {{!-- <div class="row">
  {{#each glyphs}}
    <div class="card col-12 col-md-3 mb-3">
      <p class="glyph-prepend glyph-prepend-{{this}}"> {{this}}</p>
    </div>
  {{/each}}
  </div> --}}

{{/if}}

  <style>
    .glyphs-alignment span{
      display: inline-block;
      position: relative;
    }
    .glyphs-alignment span:before{
      border-top: 1px solid #d2d2d2;
      border-bottom: 1px solid #d2d2d2;
      line-height: 1;
      padding: 0 0.5em;
      background: linear-gradient(180deg, rgba(255,255,255,0) 49%, rgba(214,214,214,0.75) 50%, rgba(255,255,255,0) 51%);
    }
    .glyphs-list{
      list-style-type: none;
      margin: 0;
      padding: 0;
    }
    @media (min-width: 540px) {
      .glyphs-list{
        column-count: 2;
        grid-gap: 20px;
      }
    }
    @media (min-width: 860px) {
      .glyphs-list{
        column-count: 3;
      }
    }
  </style>

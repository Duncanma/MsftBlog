<div class="row no-gutters">
  {{#each group.preset}}
    {{#each (getVar this) as |value key|}}
      <div class="col-12 col-sm-6 col-md-3 p-1">
        <div class="{{../../prefix}}{{#if value}}-{{value}}{{/if}} h-100 p-2 {{../../classes}}">
          <p>{{key}}</p>
        </div>
      </div>
    {{/each}}
  {{/each}}

  {{#each group as |value key|}}
    {{#unless (evaluate key "==" "preset") }}
      <div class="col-12 col-sm-6 col-md-3 p-1">
        <div class="{{../prefix}}{{#if value}}-{{value}}{{/if}} h-100 p-2 {{../classes}}">
          <p>{{key}}</p>
        </div>
      </div>
    {{/unless}}
  {{/each}}
</div>
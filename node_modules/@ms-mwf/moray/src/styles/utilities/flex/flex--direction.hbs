{{#each directions as |direction|}}
<code>.flex-{{direction}}</code>
<div class="d-flex flex-{{direction}} bg-neutral-100 mb-3">
  <div class="p-2 bg-neutral-300 border border-black">Flex item 1</div>
  <div class="p-2 bg-neutral-300 border border-black">Flex item 2</div>
  <div class="p-2 bg-neutral-300 border border-black">Flex item 3</div>
</div>
<code>.flex-{{direction}}-reverse</code>
<div class="d-flex flex-{{direction}}-reverse bg-neutral-100 mb-3">
  <div class="p-2 bg-neutral-300 border border-black">Flex item 1</div>
  <div class="p-2 bg-neutral-300 border border-black">Flex item 2</div>
  <div class="p-2 bg-neutral-300 border border-black">Flex item 3</div>
</div>
{{/each}}

<div class="row">
{{!-- m || p --}}
  {{setVar 'property' property-type}}

  {{#each breakpoints}}
    {{!-- responsive values (not include 'xs'); sm, md, lg, xl --}}
    {{setVar 'breakpoint' this}}

      {{#each @root.sides}}
        {{!-- x, y, t, b, l, r, "" --}}
        {{setVar 'side' this}}

        {{#each @root.sizes}}
          {{setVar "prop-side-dash" (strConcatArr @root.property @root.side '-') }}

          {{!-- don't include 'xs' as a value --}}
          {{#if (evaluate @root.breakpoint "==" "xs")}}
            {{#if @root.negative-margin}}
              {{#unless (evaluate  this "==" "auto")}}
                {{setVar "all-values" (strConcatArr @root.prop-side-dash "n" this)}}
              {{/unless}}
            {{else}}
              {{#unless (evaluate  (evaluate @root.property "==" "p" ) "&&" (evaluate this "==" "auto") )}}
                {{setVar "all-values" (strConcatArr @root.prop-side-dash this)}}
              {{/unless}}
            {{/if}}

          {{!-- sm+ breakpoints --}}
          {{else}}
              {{#if @root.negative-margin}}
                {{#unless (evaluate  this "==" "auto")}}
                  {{setVar "all-values" (strConcatArr @root.prop-side-dash @root.breakpoint "-n" this)}}
                {{/unless}}
              {{else}}
                {{#unless (evaluate  (evaluate @root.property "==" "p" ) "&&" (evaluate this "==" "auto") )}}
                  {{setVar "all-values" (strConcatArr @root.prop-side-dash @root.breakpoint "-" this)}}
                {{/unless}}
              {{/if}}
          {{/if}}

          {{!-- handle display --}}
          {{#if @root.negative-margin}}
          <div class="col-3 mb-3" style="height: 150px;">
            <div class="border border-gray h-100 d-flex align-items-center justify-content-center">
              <div class="border border-gray" style="width: 125px;height:26px;">
                <div class="{{@root.all-values}} {{~#if (contains @root.all-values "auto")}} w-50{{/if}}">
                  <span class="d-inline-block material-surface w-100">{{@root.all-values}}</span>
                </div>
              </div>
            </div>
          </div>
          {{else}}
          <div class="col-3" style="height: 135px;">
            <div class="border border-gray 
              {{~#if (contains @root.all-values "r")}} text-right{{/if}}">
              <div class="{{@root.all-values}} {{~#if (contains @root.all-values "auto")}} w-50{{/if}}">
                <span class="d-inline-block material-surface w-100">{{@root.all-values}}</span>
              </div>
            </div>
          </div>
          {{/if}}

        {{!-- create a break between groups of property-sides --}}
        {{#if (evaluate this "==" "auto")}}
          {{#each @root.exceptions}}
            {{#if (evaluate (evaluate @root.prop-side-dash "==" this.prop-side-dash) "&&" (evaluate @root.negative-margin "!=" true))}}
              <div class="col-3" style="height: 135px;">
                <div class="border border-gray {{#unless (evaluate @root.breakpoint "==" "xs")}}mb-{{@root.breakpoint}}-0-last-child{{else}}mb-0-last-child{{/unless}}">
                  <span class="d-inline-block w-100">{{#unless (evaluate @root.breakpoint "==" "xs")}}mb-{{@root.breakpoint}}-0-last-child{{else}}mb-0-last-child{{/unless}}</span>
                  <div class="mb-3">
                    <span class="d-inline-block material-surface w-100">mb-3</span>
                  </div><div class="mb-3">
                    <span class="d-inline-block material-surface w-100">mb-3</span>
                  </div><div class="mb-3">
                    <span class="d-inline-block material-surface w-100">mb-3</span>
                  </div>
                </div>
              </div>
            {{/if}}
          {{/each}}
          {{render '@divider' @root.horizontal-rule merge=true}}
        {{/if}}

        {{/each}}
      {{/each}}
  {{/each}}
</div>
  

{{#if palette}}
  {{> '@materials--group' materials=(getVar palette)}}
  {{#each breakpoints as |bp bpKey|}}
    {{> '@materials--group' bp=bp bpKey=bpKey materials=(getVar ../palette) prefix=../prefix column=../column}}
  {{/each}}
{{else}}
  {{> '@materials--group'}}
  {{#each breakpoints as |bp bpKey|}}
    {{> '@materials--group' bp=bp bpKey=bpKey materials=../materials column=../column}}
  {{/each}}
{{/if}}
<div class="{{#if mode}}theme-{{mode}}{{/if}} {{classes}}">
  {{#each body}}
    {{~#if container}}<{{#if container.html-tag}}{{container.html-tag}}{{else}}div{{/if}} class="container {{container.classes}}">{{/if}}
    {{~#if context}}
      {{render (lookup . "template") context merge=true}}
    {{else}}
      {{render (lookup . "template")}}
    {{/if}}
    {{~#if container}}</{{#if container.html-tag}}{{container.html-tag}}{{else}}div{{/if}}>{{/if}}
  {{/each}}
</div>
 <div class="text-glyph d-inline-flex align-bottom text-letter-space" aria-hidden="true">
  {{#each stars}}
    {{~#ifCond this '===' 'full'}}
      <span class="glyph-append glyph-append-small glyph-append-favorite-star-fill"></span>{{/ifCond}}
    {{~#ifCond this '===' 'half'}}
      <span class="glyph-append glyph-append-small glyph-append-outline-half-star-left"></span>{{/ifCond}}
    {{~#ifCond this '===' 'none'}}
      <span class="glyph-append glyph-append-small glyph-append-favorite-star text-neutral-400"></span>{{/ifCond}}
  {{/each}}
</div>

<p class="sr-only">Rated {{ratingValue}} stars out of 5 stars</p>
{{> '@star-rating--star' stars=starFill}}
{{!-- used in filter variant --}}
{{#if radio-group}}
  <span class="ml-1">
    {{~#if text~}}
      {{~{text}~}}
    {{~else~}}
      and up ({{reviewCount}})
    {{~/if~}}
    <span class="sr-only"> Reviews</span>
  </span>
{{else if reviewCount}}
  <span>({{reviewCount}})<span class="sr-only"> Reviews</span></span>
{{/if}}
{{#if form}}<form data-mount="validation" data-prevent-form-submission novalidate>{{/if~}}
  {{#if heading}}{{#with heading}}{{> '@headings' html-tag="h3" size="h4"}}{{/with}}{{/if}}
  {{~#each form~}}
    {{#if heading}}{{#with heading}}{{> '@headings' html-tag="h3" size="h4"}}{{/with}}{{/if}}
    {{#if form-group~}}{{render '@form-group' form-group}}{{~/if}}
    {{#if form-star~}}{{render '@interactive-star-rating' form-star merge=true}}{{~/if}}
  {{~/each~}}
  <p{{#if form}} class="form-group small"{{/if}}>{{{paragraph}}}</p>
  {{#if error}}{{render '@alert--dismissible' alert merge=true}}{{/if}}
  {{#if form}}{{render '@validation--feedback-list' feedback-list merge=true}}{{/if}}
  {{render '@link-group' link-group}}
{{#if form}}</form>{{/if}}

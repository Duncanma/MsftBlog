{
  "title": "Rate a product - content",
  "status": "ready",
  "handle": "rate-a-product-content",
  "default": "rate",
  "context": {
    "alert": {
      "glyph": "warning",
      "classes": "mb-g",
      "body": [
        {
          "paragraph": {
            "content": "Something went wrong on our end. Your response could not be saved. Please try again."
          }
        }
      ]
    },
    "feedback-list": {
      "headings": {
        "html-tag": "h4",
        "size": "h6"
      }
    }
  },
  "variants": [
    {
      "name": "rate",
      "context": {
        "form": [
          {
            "heading": {
              "text": "Rate product"
            }
          },
          {
            "form-star": {
              "required": true,
              "feedback": {
                "id": "starFeedback",
                "content": "You must select a star rating"
              },
              "radio-group": {
                "legend": {
                  "text": "<span aria-hidden=\"true\">*</span><span class=\"sr-only\">Required</span> Choose a star rating"
                }
              }
            }
          }
        ],
        "paragraph": "Your reviews, ratings, and name may be posted publicly on Microsoft and/or third-party applications and websites. By submitting a rating and/or a review, you agree to the <a href=\"#\">Terms of Sale</a>.",
        "link-group": {
          "links": [
            {
              "button": {
                "color": "primary",
                "text": "Submit rating",
                "classes": "mr-g",
                "attributes": {
                  "id": "submit-rating-btn"
                }
              }
            },
            {
              "button": {
                "color": "link",
                "classes": "cta",
                "text": "Add a review",
                "attributes": {
                  "id": "add-a-review-btn",
                  "type": "button"
                }
              }
            }
          ]
        }
      }
    },
    {
      "name": "rate-error",
      "context": {
        "form": [
          {
            "heading": {
              "text": "Rate product"
            }
          },
          {
            "form-star": {
              "required": true,
              "checked": 5,
              "feedback": {
                "id": "starFeedback",
                "content": "You must select a star rating"
              },
              "radio-group": {
                "legend": {
                  "text": "<span aria-hidden=\"true\">*</span><span class=\"sr-only\">Required</span> Choose a star rating"
                }
              }
            }
          }
        ],
        "paragraph": "Your reviews, ratings, and name may be posted publicly on Microsoft and/or third-party applications and websites. By submitting a rating and/or a review, you agree to the <a href=\"#\">Terms of Sale</a>.",
        "link-group": {
          "links": [
            {
              "button": {
                "color": "primary",
                "text": "Submit rating",
                "classes": "mr-g",
                "attributes": {
                  "id": "submit-rating-btn"
                }
              }
            },
            {
              "button": {
                "color": "link",
                "classes": "cta",
                "text": "Add a review",
                "attributes": {
                  "id": "add-a-review-btn",
                  "type": "button"
                }
              }
            }
          ]
        },
        "error": true
      }
    },
    {
      "name": "review",
      "context": {
        "form": [
          {
            "heading": {
              "text": "Write a review"
            }
          },
          {
            "form-group": {
              "form-control": {
                "label": {
                  "text": "<span aria-hidden=\"true\">*</span> Explain what you like and don’t like"
                },
                "textarea": true,
                "id": "review-description",
                "attributes": {
                  "required": true,
                  "aria-describedby": "review-description-feedback",
                  "data-feedback-content": "You must explain what you like and don't like.",
                  "data-feedback": "review-description-feedback",
                  "maxlength": 1000
                },
                "character-count": {
                  "status-msg-template": "%{remaining} of %{max} characters remaining",
                  "max-msg-template": "Maximum character count reached",
                  "data-sr-low-char-warning-lvl": "5",
                  "id": "review-description-char-count-block",
                  "target-id": "review-description"
                }
              }
            }
          },
          {
            "form-group": {
              "form-control": {
                "label": {
                  "text": "<span aria-hidden=\"true\">*</span> Review headline"
                },
                "id": "review-headline",
                "attributes": {
                  "required": true,
                  "aria-describedby": "review-headline-feedback",
                  "data-feedback-content": "You must enter a headline.",
                  "data-feedback": "review-headline-feedback"
                }
              }
            }
          }
        ],
        "paragraph": "Your reviews, ratings, and name may be posted publicly on Microsoft and/or third-party applications and websites. By submitting a rating and/or a review, you agree to the <a href=\"#\">Terms of Sale</a>.",
        "link-group": {
          "links": [
            {
              "button": {
                "color": "primary",
                "text": "Submit review",
                "classes": "mr-g",
                "attributes": {
                  "id": "submit-review-btn",
                  "type": "submit"
                }
              }
            },
            {
              "button": {
                "color": "link",
                "classes": "cta",
                "text": "Go back",
                "attributes": {
                  "id": "go-back-btn",
                  "type": "button"
                }
              }
            }
          ]
        }
      }
    },
    {
      "name": "review-error",
      "context": {
        "form": [
          {
            "heading": {
              "text": "Write a review"
            }
          },
          {
            "form-group": {

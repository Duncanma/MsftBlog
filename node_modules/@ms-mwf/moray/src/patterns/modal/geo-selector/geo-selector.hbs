{{#> @modal}}
  {{#*inline "header-partial"}}
    {{> '@close' navigated-market-loc.close-button}}
  {{/inline}}
  {{#*inline "body-partial"}}
    {{#> '@content-swap' translator}}
      <span class="{{target-class}}">{{@root.navigated-market-loc.modal-body.translate-button}}</span>
      <span class="{{target-class}}" hidden lang="{{@root.detected-lang}}"{{#if @root.detected-dir}} dir="{{@root.detected-dir}}"{{/if}}>{{@root.detected-market-loc.modal-body.translate-button}}</span>
    {{/'@content-swap'}}
    {{#> '@headings' header.heading id=aria-labelledby-id}}
      <span class="{{@root.translator.target-class}}" lang="{{@root.detected-lang}}"{{#if @root.detected-dir}} dir="{{@root.detected-dir}}"{{/if}}>{{@root.detected-market-loc.modal-body.modal-title}}</span>
      <span class="{{@root.translator.target-class}}" hidden>{{@root.navigated-market-loc.modal-body.modal-title}}</span>
    {{/'@headings'}}
    <div class="{{translator.target-class}}">{{> '@paragraphs' detected-market-loc.modal-body.paragraph}}</div>
    <div class="{{translator.target-class}}" hidden>{{> '@paragraphs' navigated-market-loc.modal-body.paragraph}}</div>
  {{/inline}}
  {{#*inline "footer-partial"}}
    <div class="container px-0 w-100">
      <div class="row {{translator.target-class}}">
        <div class="col-12 col-md-6 mb-3">
          {{> '@button' detected-market-loc.modal-body.stay-button}}
        </div>
        <div class="col-12 col-md-6 mb-3">
          {{> '@button' detected-market-loc.modal-body.leave-button}}
        </div>
      </div>
      <div class="row {{translator.target-class}}" hidden>
        <div class="col-12 col-md-6 mb-3">
          {{> '@button' navigated-market-loc.modal-body.stay-button}}
        </div>
        <div class="col-12 col-md-6 mb-3">
          {{> '@button' navigated-market-loc.modal-body.leave-button}}
        </div>
      </div>
    </div>
  {{/inline}}
{{/@modal}}
{{#if triggering-script-demo}}
  <!-- For Demonstration ONLY, do NOT use in production -->
  <input type="hidden" id="navigated-lang" value={{navigated-lang}} />
  <script>
    window.onload = function() {
      try {
        var instance = mwf.Modal.getInstances()[0];
        instance.show();
      } catch (e) {
        // Fail gracefully
      }
      // Change html lang to navigated lang for demo
      var navigatedLang = document.getElementById("navigated-lang").value;
      document.querySelectorAll('html')[0].setAttribute('lang', navigatedLang);
    }
  </script>
{{/if}}

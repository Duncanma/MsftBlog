{{#> @modal}}
  {{#*inline "body-partial"}}
    {{#> '@headings' header.heading id=aria-labelledby-id}}
      {{@root.detected-market-loc.modal-body.modal-title}}
    {{/'@headings'}}
    {{render '@paragraphs' detected-market-loc.modal-body.paragraph}}
  {{/inline}}
  {{#*inline "footer-partial"}}
    <div class="container px-0 w-100">
      <div class="row">
        <div class="col-12 col-md-6 mb-3">
          {{render '@button' detected-market-loc.modal-body.stay-button}}
        </div>
        <div class="col-12 col-md-6 mb-3">
          {{render '@button' detected-market-loc.modal-body.leave-button}}
        </div>
      </div>
    </div>
  {{/inline}}
{{/@modal}}
{{#if triggering-script-demo}}
<!-- For Demonstration ONLY, do NOT use in production -->
  <script>
    window.onload = function() {
      try {
        var geoModal = document.querySelector('#geo-selector-modal');
        var instance = new mwf.Modal({ el: geoModal });
        instance.show();  
      } catch (e) {
        // Fail gracefully
      }
    }
  </script>
{{/if}}

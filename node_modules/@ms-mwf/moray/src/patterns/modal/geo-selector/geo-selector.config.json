{
  "title": "Geo-Selector",
  "status": "ready",
  "default": "different-languages",
  "context": {
    "id": "geo-selector-modal",
    "aria-label": "Choose your locale and language",
    "trigger-button": {
      "id": "geo-selector-trigger",
      "attributes": {
        "hidden": true,
        "data-target": "#geo-selector-modal",
        "text": "Geo-Selector"
      }
    },
    "size": "lg",
    "aria-labelledby-id": "modal-label",
    "header": {
      "heading": {
        "html-tag": "h2",
        "classes": "h3"
      },
      "close": {
        "aria-label": "Close dialog window",
        "classes": "geo-selector-localized-copy",
        "attributes": {
          "lang": "en"
        }
      }
    },
    "footer": {
      "classes": "pb-5"
    },
    "label": "geo-selector-modal",
    "translator": {
      "target-selector": ".geo-selector-localized-copy",
      "classes": "action-trigger mb-2",
      "target-class": "geo-selector-localized-copy"
    },
    "detected-lang": "en",
    "navigated-lang": "fr",
    "navigated-market-loc": {
      "close-button": {
        "aria-label": "Fermer le fiche de dialog",
        "classes": "geo-selector-localized-copy",
        "attributes": {
          "data-dismiss": "modal",
          "hidden": true
        }
      },
      "modal-body": {
        "translate-button": "Traduire en Français",
        "modal-title": "Vous visitez le Microsoft Store au Canada - Français",
        "paragraph": {
          "content": "Voulez-vous accéder au site Canada - Anglais?"
        },
        "stay-button": {
          "text": "Rester au Canada - Français",
          "color": "primary",
          "block": true,
          "attributes": {
            "data-dismiss": "modal"
          }
        },
        "leave-button": {
          "text": "Accéder au Canada - Anglais",
          "color": "primary",
          "block": true,
          "link": {
            "href": "#"
          },
          "attributes": {
            "hreflang": "en"
          }
        }
      }
    },
    "triggering-script-demo": true
  },
  "variants": [
    {
      "name": "different-languages",
      "context": {
        "detected-market-loc": {
          "modal-body": {
            "translate-button": "Translate to English",
            "modal-title": "You are visiting the Microsoft Store in Canada - French",
            "paragraph": {
              "content": "Do you want to browse in Canada - English?",
              "attributes": {
                "lang": "en"
              }
            },
            "stay-button": {
              "text": "Stay in Canada - French",
              "color": "primary",
              "block": true,
              "attributes": {
                "data-dismiss": "modal",
                "lang": "en"
              }
            },
            "leave-button": {
              "text": "Go to Canada - English",
              "color": "primary",
              "block": true,
              "link": {
                "href": "#"
              },
              "attributes": {
                "lang": "en",
                "hreflang": "en"
              }
            }
          }
        }
      }
    },
    {
      "name": "different-languages-rtl",
      "context": {
        "navigated-lang": "ar",
        "detected-dir": "ltr",
        "header": {
          "heading": {
            "html-tag": "h2",
            "classes": "h3"
          },
          "close": {
            "aria-label": "Close dialog window",
            "classes": "geo-selector-localized-copy",
            "attributes": {
              "lang": "en",
              "dir": "ltr"
            }
          }
        },
        "detected-market-loc": {
          "modal-body": {
            "translate-button": "Translate to English",
            "modal-title": "You are visiting the Microsoft Store in Jordan - Arabic",
            "paragraph": {
              "content": "Do you want to browse in Canada - English?",
              "attributes": {
                "lang": "en",
                "dir": "ltr"
              }
            },
            "stay-button": {
              "text": "Stay in Jordan - Arabic",
              "color": "primary",
              "block": true,
              "attributes": {
                "data-dismiss": "modal",
                "lang": "en",
                "dir": "ltr"
              }
            },
            "leave-button": {
              "text": "Go to Canada - English",
              "color": "primary",
              "block": true,
              "link": {
                "href": "#"
              },
              "attributes": {
                "lang": "en",
                "hreflang": "en",
                "dir": "ltr"
              }
            }
          }
        },
        "navigated-market-loc": {
          "close-button": {
            "aria-label": "إلغاء",
            "classes": "geo-selector-localized-copy",
            "attributes": {
              "hidden": true
            }
          },
          "modal-body": {
            "translate-button": "ترجمة إلى العربية",
            "modal-title": "أنت تتسوق في Microsoft Store بـ: الأردن - العربية",
            "paragraph": {
              "content": "هل تبحث عن Microsoft Store بـ: كندا - الإنجليزية؟"
            },
            "stay-button": {
              "text": "البقاء بـ الأردن - العربية",
              "color": "primary",
              "block": true,
              "attributes": {
                "data-dismiss": "modal"
              }
            },
            "leave-button": {
              "text": "الانتقال إلى كندا - الإنجليزية",
              "color": "primary",
              "block": true,
              "link": {
                "href": "#"
              },
              "attributes": {
                "hreflang": "en"
              }
            }
          }
        }
      }
    },
    {
      "name": "same-language",
      "view": "geo-selector--same-lang.hbs",
      "context": {
        "header": {
          "heading": {
            "html-tag": "h2",
            "classes": "h3"
          },
          "close": {
            "aria-label": "Close dialog window",
            "attributes": null
          }
        },
        "detected-market-loc": {
          "modal-body": {
            "modal-title": "You are visiting the Microsoft Store in United States - English",
            "paragraph": {
              "content": "Do you want to browse in Canada - English?"
            },
            "stay-button": {
              "text": "Stay in United States - English",
              "color": "primary",
              "block": true,
              "attributes": {
                "data-dismiss": "modal"
              }
            },
            "leave-button": {
              "text": "Go to Canada - English",
              "color": "primary",
              "block": true,
              "link": {
                "href": "#"
              }
            }
          }
        }
      }
    }
  ]
}

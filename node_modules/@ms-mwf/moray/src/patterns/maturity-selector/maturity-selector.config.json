{
  "title": "Maturity Selector",
  "handle": "maturity-selector",
  "status": "ready",
  "preview": "@preview-grid",
  "default": "verification-pending",
  "context": {
    "id": "age-verification",
    "area-heading": {
      "headings": {
        "html-tag": "h2",
        "classes": "h3",
        "text": "Content warning"
      },
      "has-body": true,
      "paragraphs": {
        "content": "These screenshots contain material meant for mature viewers. Please verify your age to view the age restricted content."
      },
      "attributes": {
        "role": "status",
        "aria-live": "polite"
      }
    },
    "month": {
      "id": "birth-month",
      "label": {
        "text": "Month"
      },
      "options": [
        {
          "value": "1",
          "text": "January",
          "selected": true
        },
        {
          "value": "2",
          "text": "February"
        },
        {
          "value": "3",
          "text": "March"
        },
        {
          "value": "4",
          "text": "April"
        },
        {
          "value": "5",
          "text": "May"
        },
        {
          "value": "6",
          "text": "June"
        },
        {
          "value": "7",
          "text": "July"
        },
        {
          "value": "8",
          "text": "August"
        },
        {
          "value": "8",
          "text": "September"
        },
        {
          "value": "10",
          "text": "October"
        },
        {
          "value": "11",
          "text": "November"
        },
        {
          "value": "12",
          "text": "December"
        }
      ]
    },
    "day": {
      "id": "birth-day",
      "label": {
        "text": "Day"
      }
    },
    "year": {
      "id": "birth-year",
      "label": {
        "text": "Year"
      }
    },
    "button": {
      "color": "primary",
      "text": "Submit",
      "attributes": {
        "type": "submit"
      }
    }
  },
  "variants": [
    {
      "name": "verification-pending",
      "context": {
        "verification": {
          "pending": true
        }
      }
    },
    {
      "name": "verification-success",
      "context": {
        "verification": {
          "success": true
        },
        "area-heading": {
          "headings": {
            "text": "Screenshots"
          },
          "paragraphs": {
            "content": "You have been verified to meet the minimum age requirements. Please enjoy the additional content."
          },
          "attributes": {
            "role": "status",
            "aria-live": "polite"
          }
        }
      }
    },
    {
      "name": "verification-failure",
      "context": {
        "verification": {
          "failure": true
        },
        "area-heading": {
          "headings": {
            "text": "Screenshots"
          },
          "paragraphs": {
            "content": "These screenshots contain material meant for mature viewers. You do not meet the minimum age requirements."
          },
          "attributes": {
            "role": "status",
            "aria-live": "polite"
          }
        }
      }
    }
  ]
}

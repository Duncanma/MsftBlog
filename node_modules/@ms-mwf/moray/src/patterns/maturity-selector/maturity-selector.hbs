{{render '@area-heading' area-heading}}

{{#if verification.pending}}
<form id="{{id}}" class="mt-4" novalidate>
  <div class="d-md-flex align-items-end">
    <div class="form-group d-md-inline-block mb-md-0 mr-md-1">
      {{render '@select' month}}
    </div>
    <div class="form-group d-md-inline-block mb-md-0 mr-md-1">
      {{setProp day 'options' (array)}}
      {{#for 0 31 1}}
      {{push ../day.options (object text=@indexPlusOne value=@indexPlusOne)}}
      {{/for}}
      {{render '@select' day}}
    </div>
    <div class="form-group d-md-inline-block mb-md-0 mr-md-1">
      {{setProp year 'options' (array)}}
      {{#for 1919 2020 1}}
      {{push ../year.options (object 
        text=@indexPlusOne
        value=@indexPlusOne
        selected=(evaluate @indexPlusOne '===' 2020)
      )}}
      {{/for}}
      {{render '@select' year}}
    </div>
    <div class="d-md-inline-block mt-4 mt-md-0">
      {{render '@button' button}}
    </div>
  </div>
</form>
{{/if}}

{{#if verification.failure}}
<p class="h4 mt-4">You may not access this content.</p>
{{/if}}

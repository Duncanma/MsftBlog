{{#if badge}}
  {{render '@badge' badge}}
{{/if}}
{{#if logo}}
  <div class="h4">
    {{#with logo}}
      {{> '@images' classes="img-fluid"}}
    {{/with}}
  </div>
{{/if}}
{{#if heading}}
  {{#if (evaluate color-scheme "==" "brand-dark")}}
    {{#with heading}}
      {{> '@headings' color="brand-light"}}
    {{/with}}
  {{else}}
    {{render '@headings' heading merge=true}}
  {{/if}}
{{/if}}
{{#if paragraph}}
  {{render '@paragraphs' paragraph merge=true}}
{{/if}}
{{#if body}}
  <div class="{{#if body-classes}}{{body-classes}}{{else}}mb-4{{/if}}">
    {{#each body}}
      {{#if paragraph}}{{> '@paragraphs--paragraph' paragraph}}{{/if}}
    {{/each}}
  </div>
{{/if}}
{{#if blockquote}}{{render '@block-quotes' blockquote}}{{/if}}
{{#if content-cards}}{{render '@content-cards-horizontal' content-cards}}{{/if}}
{{#if link-group}}
  {{~#with link-group}}
    {{> '@link-group' color-scheme=../color-scheme}}
  {{/with~}}
{{/if}}
{{#if submit-form}}
  {{> '@feature--submit-form'}}
{{/if}}
{{#if search-form}}
  {{> '@feature--search-form'}}
{{/if}}
{{#if legal}}
  <div class="small mt-5">
    {{#each legal}}{{> '@paragraphs--paragraph'}}{{/each}}
  </div>
{{/if}}

<div class="row">
    {{#each panes}}
    {{#ifCond @index '==' 0}}
    <div class="col-md-5">
    {{/ifCond}}
    {{#ifCond @index '==' 1}}
    <div class="col-md-6">
    {{/ifCond}}
        <div class="{{#ifCond @index '==' 0}}pb-4 pb-md-0{{/ifCond}}{{#ifCond @index '==' 1}}border-bottom pb-4 mb-4{{/ifCond}}">
            <div class="row">
                <div class="col col-sm-10 col-md{{#ifCond @index '==' 0}}-12{{/ifCond}}">
                    <h3>{{this.heading}}</h3>
                    {{#if this.paragraph}}
                    <p>{{this.paragraph}}</p>
                    {{/if}}
                    <a href="{{this.link.href}}" class="cta mb-4" {{{htmlAttr this.link.attributes}}}>{{this.link.text}}</a>
                </div>

                <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md{{#ifCond @index '==' 0}}-12{{/ifCond}} offset-md-0">
                    {{> '@images--full-width-picture-element' this.image}}
                </div>
            </div>
        </div>
    {{#ifCond @index '==' 0}}
    </div>
    <div class="col-md-1 justify-content-center d-md-flex mb-4 mb-md-0">
        <div class="border-bottom d-md-none"></div>
        <div class="border-right d-none d-md-block"></div>
    </div>
    {{/ifCond}}
    {{#ifCond @index '==' 2}}
    </div>
    {{/ifCond}}
    {{/each}}
</div>
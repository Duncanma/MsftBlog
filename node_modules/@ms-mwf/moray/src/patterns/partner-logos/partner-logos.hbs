<div class="show-more-show-less py-4 py-lg-5" data-mount="show-more-show-less" data-count="9">
  <div class="row mb-5">
    <div class="col-12 col-md-8">
      <h2 class="mt-3 h2">{{ heading }}</h2>
    </div>
    {{#if linkText }}
    <div class="col-12 col-md-8 col-xl-6">
      <a href="{{ linkUrl }}" class="cta">{{ linkText }}</a>
    </div>
    {{/if}}
  </div>
  <div class="row mx-n2 mt-n2 mx-md-n3 mt-md-n3 {{#ifCond logos.length '>' 8 }}show-more-show-less-toggleable-content{{/ifCond}}">
  {{#each logos}}
    <div class="col-6 col-md-4 col-lg-3 p-2 p-md-3">
      <div {{#if ../multi-link }}data-mount="click-group"{{/if}} class="h-100 p-2 p-md-3 p-lg-4 p-xl-5 text-center material-backdrop {{#if ../multi-link }}position-relative depth-16-hover{{/if}}">
        <div class="embed-responsive embed-responsive-4by3 mb-3">
          <div class="embed-responsive-item img-object-contain-wrapper">
            {{setProp this 'classes' 'img-object-contain embed-responsive-item'}}
            {{render '@images' this merge=true}}
          </div>
        </div>
        {{#if ../multi-link }}
        <a href="{{ linkUrl }}" class="m-0 font-weight-semibold" {{#if linkTarget }}target="{{ linkTarget }}"{{/if}}>{{ text }}</a>
        {{else}}
        <p class="m-0 font-weight-semibold">{{ text }}</p>
        {{/if}}
      </div>
    </div>
  {{/each}}
</div>
  
  {{#ifCond logos.length '>' 8 }}
  <button type="button" class="action-trigger glyph-prepend show-more-show-less-toggle" data-show-less-text="Show less" aria-expanded="false">Show more</button>
  {{/ifCond}}
</div>

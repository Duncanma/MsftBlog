<{{#if modal}}div{{else}}li{{/if}} class="border-top border-neutral-200 pt-4 card {{#unless modal}}my-4{{else}}mt-4 mb-5{{/unless}}{{#if last}} border-bottom pb-4{{/if}}">
  <div class="card-body">
    {{> '@headings' text=title html-tag="h4" classes="mt-3"}}
    <div class="order-first">
      <div class="d-flex justify-content-between">
        <p class="h5"><span class="sr-only">Reviewed by: </span>{{name}}</p>
        {{#if modal}}
          {{render '@button' modal-toggle~}}
          {{render '@rate-a-product--update' modal merge=true}}
        {{/if}}
      </div>
      <p class="mb-3">{{date}}</p>
      <div class="d-flex">
        {{render '@star-rating' stars~}}
        <span class="text-muted ml-1" aria-hidden="true">{{stars.ratingValue}} out of 5</span>
      </div>
    </div>
    <div class="mb-4">
      {{#if body.visible-text}}
        {{render '@show-more-show-less--text' body merge=true}}
      {{else}}
        <p>{{body}}</p>
      {{/if}}
    </div>
    {{#if care}}
      <div class="card material-surface p-4 mb-4">
        <h5 class="base mb-3 text-muted">Microsoft Customer Care <span class="font-weight-normal">responded <span class="sr-only">to {{title}}</span>on {{care.date}}</span></h5>
        <div class="card-body">
          <p>{{care.body}}</p>
        </div>
      </div>
    {{/if}}
    {{#unless modal}}
      {{#if helped}}
        <p class="font-weight-semibold text-muted">{{helped}} people found this helpful.</p>
      {{/if}}
      {{#if authenticated}}
        {{#if helpful}}
          <p class="text-muted">Thanks for your feedback on this review being helpful. <a href="#">Undo feedback.</a></p>
        {{/if}}
        {{#compareOr helpful undefined reported undefined}}
        <div class="d-flex mb-g">
          {{#unless helpful}}
            <fieldset class="mr-g">
              <div class="d-flex align-items-center">
                <p class="mr-3 mb-0 text-muted" aria-hidden="true">Was this helpful?</p>
                <legend class="sr-only">{{title}} review, was this helpful?</legend>
                {{> '@button' style="outline" color="primary" classes="mr-1" text="Yes"}}
                {{> '@button' style="outline" color="primary" classes="mr-1" text="No"}}
              </div>
            </fieldset>
          {{/unless}}
          {{#unless reported}}
            {{render '@dropdown' report-dropdown}}
          {{/unless}}
        </div>
        {{/compareOr}}
        {{#if reported}}
          <p class="text-muted">Thanks for your feedback. You reported this review for spam and advertising. <a href="#">Undo report.</a></p>
        {{/if}}
        {{#if error}}
          {{render '@alert--dismissible' alert merge=true}}
        {{/if}}
      {{/if}}
    {{/unless}}
  </div>
</{{#if modal}}div{{else}}li{{/if}}>

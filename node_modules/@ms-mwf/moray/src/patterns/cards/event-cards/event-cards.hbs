<section aria-label="{{interpolateString aria-label num=card-grid.cards.length }}">
  {{render '@area-heading' area-heading}}

  {{~setProp card-grid 'classes' 'mt-4'~}}
  {{~setProp card-grid 'grid' (evaluate card-grid.grid '||' (object))~}}
  {{~setProp card-grid.grid 'row-cols' (array '1' 'md-3')~}}
  {{~setProp card-grid.grid 'card-classes' 'h-100 material-surface p-4'~}}
  {{~#each card-grid.cards~}}
    {{~setProp this 'col-classes' 'mb-g mb-md-0'~}}
    {{~setProp body 'classes' 'mb-4'~}}
  {{~/each~}}
  {{~render '@card-layout' card-grid~}}
</section>

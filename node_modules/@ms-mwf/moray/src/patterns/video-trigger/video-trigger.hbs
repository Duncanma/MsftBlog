{{setVar 'button-id' (evaluate button.id '||' (uid))}}
{{setVar 'modal-id' (evaluate modal.id '||' (uid))}}

<section>
  <div class="row">
    <div class="col-12 px-0 px-lg-g">
      {{render '@headings' headings merge=true }}
      <div data-mount="click-group" data-target="{{getVar 'button-id'}}">
        <div class="position-relative mb-4 img-flex-auto">
          {{render '@images--immersive-picture-element' images merge=true }}
          {{render '@play-video' icon}}
        </div>
        <div class="px-g px-lg-0">
          <button type="button" id="{{getVar 'button-id'}}" class="action-trigger glyph-prepend glyph-prepend-play" data-target="#{{getVar 'modal-id'}}">{{button.text}}</button>
        </div>
      </div>
    </div>
  </div>
</section>

{{#> @modal id=(getVar 'modal-id') button=false}}
  {{#*inline "body-partial"}}
    Embed third-party video player here.
  {{/inline}}
{{/@modal}}

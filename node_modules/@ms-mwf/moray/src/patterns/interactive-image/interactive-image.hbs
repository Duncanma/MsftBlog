{{setVar "skip-id" (evaluate skip-id '||' (uid))}}
{{setProp skip-link 'classes' (evaluate skip-link.classes '||' 'sr-only-focusable bg-light w-100 position-absolute')}}
{{setProp skip-link 'link' (evaluate skip-link.link '||' (object))}}
{{setProp skip-link.link 'href' (math '#' '+' (getVar 'skip-id'))}}

<section class="position-relative" aria-label="Placeholder for descriptive label">
  {{render '@button--link' skip-link merge=true}}
  {{render '@images--full-width-picture-element' image merge=true}}
  <ul class="list-unstyled">
  {{#each popovers}}
    <li>{{render '@popover' this merge=true}}</li>
  {{/each}}
  </ul>
</section>
<a id="{{getVar 'skip-id'}}" class="sr-only" tabindex="-1">{{skip-end-text}}</a>
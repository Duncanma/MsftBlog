{{#if stars}}
{{render '@headings' heading~}}
<div class="d-flex flex-row align-items-end mb-4 overflow-hidden">
  <span class="display-3 mb-0 mr-2 text-line-height-reset">4.5</span>
  <div class="d-flex flex-column">
    <span class="mb-2">Rating out of 5 stars</span>
    {{render '@star-rating' stars}}
  </div>
</div>
{{/if}}
<section role="region" aria-label="Star rating for {product-name}">
  <ul class="list-unstyled">
  {{#each content}}
    <li>
      <span class="sr-only">{{sr-only}}</span>
      {{render '@progress' progress}}
    </li>
  {{/each}}
  </ul>
</section>

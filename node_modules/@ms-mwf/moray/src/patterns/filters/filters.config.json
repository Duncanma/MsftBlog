{
  "title": "Filters",
  "status": "ready",
  "default": "default",
  "preview": "@preview-grid",
  "context": {
    "page-heading": {
      "html-tag": "h1",
      "text": "Shop PCs & accessories"
    },
    "filters-heading": {
      "html-tag": "h2",
      "classes": "h3",
      "text": "Filter your search"
    },
    "applied-filters": {
      "filters": [
        {
          "field": "Price",
          "selection": "$500 - $999"
        },
        {
          "field": "Storage",
          "selection": "512 GB"
        }
      ]
    },
    "results-heading": {
      "html-tag": "h3",
      "text": "Results (1 <span aria-hidden=\"true\">-</span><span class=\"sr-only\">through</span> 10 of 44)"
    },
    "filters": [
      {
        "dropdown": {
          "classes": "mr-2 my-2",
          "toggle": {
            "id": "dropdown-price",
            "classes": "w-100 text-left",
            "text": "Price",
            "attributes": {
              "aria-controls": "dropdown-price-menu"
            }
          },
          "menu": {
            "id": "dropdown-price-menu",
            "classes": "p-4 text-nowrap",
            "large": true,
            "html-tag": "div",
            "template": {
              "name": "filters--dropdown",
              "data": {
                "filter": [
                  {
                    "radio-group": {
                      "name": "price",
                      "legend": {
                        "text": "Price"
                      },
                      "radios": [
                        {
                          "value": "500",
                          "label": {
                            "text": "Under $500 (20<span class=\"sr-only\"> items</span>)"
                          }
                        },
                        {
                          "value": "999",
                          "label": {
                            "text": "$500 - $999 (5<span class=\"sr-only\"> items</span>)"
                          },
                          "attributes": {
                            "checked": "true"
                          }
                        },
                        {
                          "value": "1500",
                          "label": {
                            "text": "$1000 - $1500 (14<span class=\"sr-only\"> items</span>)"
                          }
                        },
                        {
                          "value": "over",
                          "label": {
                            "text": "Over $1500 (5<span class=\"sr-only\"> items</span>)"
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      },
      {
        "dropdown": {
          "classes": "mr-2 my-2",
          "toggle": {
            "id": "dropdown-categories",
            "classes": "w-100 text-left",
            "text": "Category",
            "attributes": {
              "aria-controls": "dropdown-categories-menu"
            }
          },
          "menu": {
            "id": "dropdown-categories-menu",
            "classes": "p-4 text-nowrap",
            "large": true,
            "html-tag": "div",
            "attributes": {
              "role": "group",
              "aria-labelledby": "dropdown-categories"
            },
            "template": {
              "name": "filters--dropdown",
              "data": {
                "filter": [
                  {
                    "accordion": {
                      "group-management": false,
                      "classes": "mt-n3",
                      "collapses": [
                        {
                          "classes": "pb-0",
                          "button-wrapper": {
                            "html-tag": "p",
                            "classes": "border-0",
                            "attributes": {
                              "id": "category-computer-btn-wrapper"
                            }
                          },
                          "button": {
                            "text": "Computers",
                            "attributes": {
                              "type": "button"
                            }
                          },
                          "auto-expand": true,
                          "template": {
                            "name": "radio-group",
                            "data": {
                              "name": "category-computers",
                              "classes": "mb-0",
                              "legend": {
                                "text": "Computers",
                                "classes": "d-none"
                              },
                              "radios": [
                                {
                                  "value": "all",
                                  "label": {
                                    "text": "All computers (40<span class=\"sr-only\"> items</span>)"
                                  }
                                },
                                {
                                  "value": "laptops",
                                  "label": {
                                    "text": "Laptops (20<span class=\"sr-only\"> items</span>)"
                                  }
                                },
                                {
                                  "value": "2-in-1",
                                  "label": {
                                    "text": "2-in-1 PCs (5<span class=\"sr-only\"> items</span>)"
                                  }
                                },
                                {
                                  "value": "desktops",
                                  "label": {
                                    "text": "Desktops (10<span class=\"sr-only\"> items</span>)"
                                  }
                                }
                              ]
                            }
                          }
                        },
                        {
                          "classes": "pb-0",
                          "button-wrapper": {
                            "html-tag": "p",
                            "classes": "border-0",
                            "attributes": {
                              "id": "category-accessories-btn-wrapper"
                            }
                          },
                          "button": {
                            "text": "Accessories",
                            "attributes": {
                              "type": "button"
                            }
                          },
                          "template": {
                            "name": "radio-group",
                            "classes": "mb-0",
                            "data": {
                              "name": "category-accessories",
                              "legend": {
                                "text": "Accessories",
                                "classes": "d-none"
                              },
                              "radios": [
                                {
                                  "value": "all",
                                  "label": {
                                    "text": "All accessories (3<span class=\"sr-only\"> items</span>)"
                                  }
                                },
                                {
                                  "value": "mice",
                                  "label": {
                                    "text": "Mice (2<span class=\"sr-only\"> items</span>)"
                                  }
                                },
                                {
                                  "value": "keyboards",
                                  "label": {
                                    "text": "Keyboards (1<span class=\"sr-only\"> items</span>)"
                                  }
                                }
                              ]
                            }
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      },
      {
        "dropdown": {
          "classes": "mr-2 my-2",
          "toggle": {
            "id": "dropdown-discount",
            "text": "Discount",
            "attributes": {
              "aria-controls": "dropdown-discount-menu"
            }
          },
          "menu": {
            "id": "dropdown-discount-menu",
            "classes": "p-4 text-nowrap",
            "large": true,
            "html-tag": "div","template": {
              "name": "filters--dropdown",
              "data": {
                "filter": [
                  {
                    "radio-group": {
                      "legend": {
                        "text": "Discount"
                      },
                      "name": "discount",
                      "radios": [
                        {
                          "label": {
                            "text": "On sale"
                          },
                          "value": "sale",
                          "type": "checkbox"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      },
      {
        "dropdown": {
          "classes": "mr-2 my-2",
          "toggle": {
            "id": "dropdown-storage",
            "text": "Storage",
            "attributes": {
              "aria-controls": "dropdown-storage-menu"
            }
          },
          "menu": {
            "id": "dropdown-storage-menu",
            "classes": "p-4 text-nowrap",
            "large": true,
            "html-tag": "div",
            "template": {
              "name": "filters--dropdown",
              "data": {
                "filter": [
                  {
                    "radio-group": {
                      "name": "storage",
                      "legend": {
                        "text": "Storage"
                      },
                      "radios": [
                        {
                          "value": "256gb",
                          "label": {
                            "text": "256 GB (16<span class=\"sr-only\"> items</span>)"
                          }
                        },
                        {
                          "value": "512gb",
                          "label": {
                            "text": "512 GB (11<span class=\"sr-only\"> items</span>)"
                          },
                          "attributes": {
                            "checked": "true"
                          }
                        },
                        {
                          "value": "1tb",
                          "label": {
                            "text": "1 TB (6<span class=\"sr-only\"> items</span>)"
                          }
                        },
                        {
                          "value": "2tb",
                          "label": {
                            "text": "2 TB (4<span class=\"sr-only\"> items</span>)"
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      },
      {
        "dropdown": {
          "classes": "mr-2 my-2",
          "toggle": {
            "id": "dropdown-screen-size",
            "text": "Screen size",
            "attributes": {
              "aria-controls": "dropdown-screen-size-menu"
            }
          },
          "menu": {
            "id": "dropdown-screen-size-menu",
            "classes": "p-4 text-nowrap",
            "large": true,
            "html-tag": "div",
            "template": {
              "name": "filters--dropdown",
              "data": {
                "filter": [
                  {
                    "radio-group": {
                      "legend": {
                        "text": "Screen size"
                      },
                      "name": "screensize",
                      "radios": [
                        {
                          "label": {
                            "text": "Under 12 (16<span class=\"sr-only\"> items</span>)"
                          },
                          "value": "under-12",
                          "type": "checkbox"
                        },
                        {
                          "label": {
                            "text": "12\" - 13.9\" (11<span class=\"sr-only\"> items</span>)"
                          },
                          "value": "12-13",
                          "type": "checkbox"
                        },
                        {
                          "label": {
                            "text": "14\" - 15.9\" (6<span class=\"sr-only\"> items</span>)"
                          },
                          "value": "14-15",
                          "type": "checkbox"
                        },
                        {
                          "label": {
                            "text": "16\" or more (4<span class=\"sr-only\"> items</span>)"
                          },
                          "value": "over-16",
                          "type": "checkbox"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      },
      {
        "dropdown": {
          "classes": "mr-2 my-2",
          "toggle": {
            "id": "dropdown-ratings",
            "text": "Ratings",
            "attributes": {
              "aria-controls": "dropdown-ratings-menu"
            }
          },
          "menu": {
            "id": "dropdown-ratings-menu",
            "classes": "p-4 text-nowrap",
            "large": true,
            "html-tag": "div",
            "template": {
              "name": "filters--dropdown",
              "data": {
                "filter": [
                  {
                    "ratings": true,
                    "radio-group": {
                      "legend": {
                        "text": "Ratings"
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      },
      {
        "dropdown": {
          "classes": "mr-2 my-2",
          "toggle": {
            "id": "dropdown-capabilities",
            "text": "Capabilities",
            "attributes": {
              "aria-controls": "dropdown-capabilities-menu"
            }
          },
          "menu": {
            "id": "dropdown-capabilities-menu",
            "classes": "p-4 text-nowrap",
            "large": true,
            "html-tag": "div",
            "template": {
              "name": "filters--dropdown",
              "data": {
                "filter": [
                  {
                    "radio-group": {
                      "legend": {
                        "text": "Capabilities"
                      },
                      "name": "capabilities",
                      "radios": [
                        {
                          "label": {
                            "text": "Windows Mixed Reality (2<span class=\"sr-only\"> items</span>)"
                          },
                          "value": "windows-mixed-reality",
                          "type": "checkbox"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      },
      {
        "dropdown": {
          "classes": "mr-2 my-2",
          "toggle": {
            "id": "dropdown-additional-features",
            "text": "Additional features",
            "attributes": {
              "aria-controls": "dropdown-additional-features-menu"
            }
          },
          "menu": {
            "id": "dropdown-additional-features-menu",
            "classes": "p-4 text-nowrap",
            "large": true,
            "html-tag": "div",
            "template": {
              "name": "filters--dropdown",
              "data": {
                "filter": [
                  {
                    "radio-group": {
                      "legend": {
                        "text": "Additional features"
                      },
                      "name": "additional-features",
                      "radios": [
                        {
                          "label": {
                            "text": "Touch screen (5<span class=\"sr-only\"> items</span>)"
                          },
                          "value": "touch-screen",
                          "type": "checkbox"
                        },
                        {
                          "label": {
                            "text": "Cortana (15<span class=\"sr-only\"> items</span>)"
                          },
                          "value": "cortana",
                          "type": "checkbox"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      }
    ],
    "more-filters": {
      "classes": "mr-2 my-2",
      "toggle": {
        "text": "More filters",
        "style": "faint",
        "color": "secondary",
        "id": "dropdown-more-filters"
      },
      "menu": {
        "classes": "p-4 text-nowrap",
        "large": true,
        "html-tag": "div",
        "attributes": {
          "role": "group",
          "aria-labelledby": "dropdown-more-filters"
        }
      }
    },
    "all-filters": {
      "button": {
        "style": "outline",
        "color": "secondary",
        "text": "All filters",
        "attributes": {
          "type": "button",
          "data-target": "#modal-all-filters"
        }
      },
      "modal": {
        "id": "modal-all-filters",
        "aria-labelledby-id": "modal-all-filters-title",
        "title": "Filter your search",
        "type": "scrollable",
        "content": {
          "html-tag": "form",
          "attributes": {
            "data-mount": "validation",
            "novalidate": true
          }
        },
        "header": {
          "classes": "border-bottom border-neutral-300"
        },
        "body": {
          "classes": "pt-0"
        },
        "footer": {
          "classes": "border-top border-neutral-300"
        }
      }
    },
    "mobile-accordion": {
      "group-management": false
    },
    "sort": {
      "classes": "btn btn-faint-secondary border-transparent",
      "wrapper": {
        "classes": "d-inline-block my-2 w-auto"
      },
      "label": {
        "text": "Sort by:",
        "classes": "d-inline-block mr-g"
      },
      "options": [
        {
          "value": "featured",
          "text": "Featured",
          "selected": true
        },
        {
          "value": "lowest",
          "text": "Lowest price"
        },
        {
          "value": "highest",
          "text": "Highest price"
        },
        {
          "value": "rating",
          "text": "Rating"
        }
      ]
    },
    "items-shown": {
      "wrapper": {
        "classes": "d-inline-block w-auto"
      },
      "label": {
        "text": "Items shown per page",
        "classes": "mr-2 text-neutral-400"
      },
      "options": [
        {
          "value": "10",
          "text": "10",
          "selected": true
        },
        {
          "value": "50",
          "text": "50"
        },
        {
          "value": "all",
          "text": "All"
        }
      ]
    },
    "pagination": {
      "size": 6,
      "activePage": 3,
      "navClasses": "d-inline-block mb-4 mb-md-0"
    }
  },
  "variants": [
    {
      "name": "default",
      "context": {
        "row2-start": 2
      }
    },
    {
      "name": "single-row",
      "context": {
        "row2-start": 0
      }
    }
  ]
}

{{~setVar 'rowClasses' (array 'no-gutters')~}}

{{~#unless carousel~}}
  {{~setVar 'cardClasses' 'mx-ng mx-md-0'~}}
{{~/unless~}}

{{!-- Set columns --}}
{{~setProp right 'col-classes' 'col-sm'~}}
{{~#if left~}}
  {{~setProp left 'col-classes' 'w-auto pt-4 pl-4 py-md-5 pl-md-5 pr-md-g'~}}
{{~/if~}}

{{!-- Set content padding --}}
{{~setVar 'cardBodyClasses' (array 'p-4 p-md-5 w-lg-col-11 w-xl-col-8')~}}
{{~#if left~}}
  {{~push cardBodyClasses 'pl-md-g'~}}
{{~/if~}}
{{~setProp right.body 'classes' (join cardBodyClasses ' ')~}}

{{!-- Define color scheme --}}
{{~#if color-scheme~}}
  {{~push rowClasses (strConcat 'material-color-' color-scheme)~}}
  {{~setProp right.body.templates.[0].data 'color-scheme' color-scheme~}}
{{~else if border~}}
  {{~push rowClasses 'border'~}}
{{~else~}}
  {{~push rowClasses 'material-surface'~}}
{{~/if~}}

{{#> '@card--horizontal' classes=(tokenConcat classes cardClasses) row-classes=(join rowClasses ' ')}}
  {{#* inline 'image'}}
    {{~#if (evaluate style '==' 'rounded')~}}
      {{> '@images' classes='h-auto rounded-circle' width='64'}}
    {{~else~}}
      {{> '@images' classes='h-auto' width='64'}}
    {{~/if~}}
  {{/inline}}
{{/'@card--horizontal'}}
<div class="row">
  {{#if area-heading}}
    <div class="col-12">
      {{ render '@area-heading' area-heading }}
    </div>
  {{/if}}
  <div class="col-12 px-0 px-md-g">
    {{#> '@carousel' }}
      {{#if ../color-scheme}}
        {{setProp this 'color-scheme' ../color-scheme}}

        {{#ifCond ../color-scheme '===' 'brand-dark'}}
          {{#each ../body.templates}}
            {{#ifCond name '===' 'headings'}}
              {{setProp ../data 'color' 'brand-light'}}
            {{/ifCond}}
          {{/each}}
        {{/ifCond}}
      {{/if}}

      {{> '@content-cards-vertical--card' carousel=true depth=true }}
    {{/ '@carousel'}}
  </div>
</div>

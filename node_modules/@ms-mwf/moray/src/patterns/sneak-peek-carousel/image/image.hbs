<div class="row">
  <div class="col-12 mb-4">
    <div class="row align-items-end">
      <div class="col-lg-9">
        {{render '@area-heading' area-heading }}
      </div>
      {{#if image-gallery}}
      <div class="col-lg-3 text-lg-right">
        {{render '@action-trigger' image-gallery.trigger}}
      </div>
      {{/if}}
    </div>
  </div>
  {{#if image-gallery}}
  {{#> @modal--scrollable button=image-gallery.modal.button label=image-gallery.modal.label title=image-gallery.modal.title aria-labelledby-id=image-gallery.modal.aria-labelledby-id type="scrollable" size="xl" id=image-gallery.modal.id}}
  {{#*inline "body-partial"}}
  {{> '@paragraphs' image-gallery.modal.body-header classes="mb-3 text-left"}}
  {{#each image-gallery.modal.images}}
  {{#if @last}}
  {{> '@images--responsive' this classes="img-fluid"}}
  {{else}}
  {{> '@images--responsive' this classes="img-fluid mb-3 mb-lg-5"}}
  {{/if}}
  {{/each}}
  {{/inline}}
  {{/@modal--scrollable}}
  {{/if}}
  <div class="col-12 px-0 px-lg-g">
    {{#> '@carousel' }}
    <div class="card-img-overlay">
      <div class="card-background">
        {{ render '@images--full-width-picture-element' background-image merge=true }}
      </div>
    </div>
    {{/ '@carousel'}}
  </div>

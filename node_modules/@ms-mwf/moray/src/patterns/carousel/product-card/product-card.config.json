{
  "status": "ready",
  "default": "apps",
  "collated": false,
  "title": "Product Card Carousel",
  "handle": "carousel-product-card",
  "preview": "@preview-grid",
  "meta": {
    "wrapper": {
      "classes": "material-surface"
    }
  },
  "context": {
    "no-loop": true,
    "no-indicators": true,
    "classes": "carousel-product-card",
    "aria-roledescription": "slideshow",
    "previous-label": "Previous slide",
    "next-label": "Next slide",
    "aria-label": "Trending products",
    "skip-link": {
      "text": "Skip trending products"
    },
    "skip-end-text": "End of trending products section",
    "control-classes": "my-4 my-md-5",
    "back-to-controls": {
      "text": "Back to Next and Previous controls",
      "classes": "back-to-controls text-left sr-only-focusable w-100 position-absolute bottom-0"
    },
    "heading": {
      "html-tag": "h2",
      "text": "Now trending",
      "classes": "mb-2"
    },
    "status": {
      "container-id": "status-container",
      "sr-element-id": "status-msg",
      "sr-text": "Showing %{start} through %{end} of %{total} items",
      "visible-text": "Showing %{start}%{separator}%{end} of %{total} items"
    },
    "cta": {
      "text": "See all",
      "classes": "float-left"
    },
    "slides": [
      {
        "aria-roledescription": "slide",
        "aria-labelledby": "status-msg",
        "handle": "\\@product-cards--apps",
        "section": null,
        "carousel": true
      },
      {
        "aria-roledescription": "slide",
        "aria-labelledby": "status-msg",
        "handle": "\\@product-cards--apps",
        "section": null,
        "carousel": true
      }
    ]
  },
  "variants": [
    {
      "name": "apps"
    },
    {
      "name": "devices",
      "context": {
        "slides": [
          {
            "aria-roledescription": "slide",
            "aria-labelledby": "status-msg",
            "handle": "\\@product-cards--devices",
            "section": null,
            "carousel": true
          },
          {
            "aria-roledescription": "slide",
            "aria-labelledby": "status-msg",
            "handle": "\\@product-cards--devices",
            "section": null,
            "carousel": true
          }
        ]
      }
    },
    {
      "name": "games",
      "context": {
        "slides": [
          {
            "aria-roledescription": "slide",
            "aria-labelledby": "status-msg",
            "handle": "\\@product-cards--games",
            "section": null,
            "carousel": true
          },
          {
            "aria-roledescription": "slide",
            "aria-labelledby": "status-msg",
            "handle": "\\@product-cards--games",
            "section": null,
            "carousel": true
          }
        ]
      }
    },
    {
      "name": "no-heading",
      "context": {
        "heading": false
      }
    },
    {
      "name": "few-items",
      "context": {
        "slides": [
          {
            "aria-roledescription": "slide",
            "aria-labelledby": "status-msg",
            "handle": "\\@product-cards--4-apps",
            "section": null,
            "carousel": true
          }
        ]
      }
    },
    {
      "name": "many-items-one-slide",
      "context": {
        "slides": [
          {
            "aria-roledescription": "slide",
            "aria-labelledby": "status-msg",
            "handle": "\\@product-cards--9-apps",
            "section": null,
            "carousel": true
          }
        ]
      }
    }
  ]
}

{{setVar "status-container-id" (evaluate status-container-id '||' (uid))}}
<div class="row">
  <div class="col-12 px-0 px-md-g">
    {{#> '@carousel' }}
      {{#*inline "header-partial"}}
        <div class="px-g px-md-0">
          <div class="row">
            {{#if heading}}
              <div class="col-12 col-md-8">
                {{ render '@headings' heading merge=true }}
              </div>
            {{/if}}
            <div class="col-12 d-none">
              <div id="{{getVar 'status-container-id'}}" class="float-left mr-3">
                <span id="{{status.sr-element-id}}" class="sr-only" aria-live="polite">{{status.sr-text}}</span>
                <span class="" aria-hidden="true">{{status.visible-text}}</span>
              </div>
              {{ render '@call-to-action' cta merge=true }}
            </div>
          </div>
        </div>
      {{/inline}}
      <div class="container">
        {{ render handle this merge=true }}
      </div>
    {{/ '@carousel'}}
  </div>
</div>

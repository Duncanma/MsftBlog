<div class="row position-relative">
  {{!-- Background box wrapper (for larger views) --}}
  <div class="position-absolute {{#if middle-image}}col-md-7 offset-md-5 d-none d-md-flex{{else}}col-12{{#unless secondary-content.bottom-text}} pb-5 pb-md-0{{/unless}}{{/if}} h-100 pt-4 pt-md-0">
    <div class="material-surface h-100 flex-grow-1 mx-ng mx-md-4 mr-xl-5 {{#if middle-image}}ml-xl-4{{else}}ml-xl-5{{/if}}"></div>
  </div>

  {{#with primary-content}}
  {{!-- Primary content column --}}
  <div class="col-md-8">
    <div class="pr-md-4">

      {{!-- Primary image area --}}
      <div class="mb-4 ml-ng ml-md-0 mt-md-4 my-xl-5">
        {{#if show-video-icon }}
        <div class="position-relative">
          <div class="play-video-icon bg-light glyph-prepend glyph-prepend-play-button-72 depth-8" aria-hidden="true"></div>
        {{/if}}
          {{render '@images--full-width-picture-element' primary-image}}
        {{#if show-video-icon }}
        </div>
        <div class="pl-md-4 pl-lg-4 pl-xl-5 ml-md-4 ml-xl-5">
          <button type="button" id="playVideo1" class="action-trigger glyph-prepend glyph-prepend-play mt-2 mt-md-3">
            Play Video
          </button>
        </div>
        {{/if}}
      </div>

      {{#if ../middle-image}}
      {{!-- Primary content inner row --}}
      <div class="row mb-4 mb-xl-5">

        {{!-- Primary content area column --}}
        <div class="col-md-8 col-xl-7">
      {{/if}}

      {{!-- Primary content area --}}
      <div class="mb-4 {{#if ../middle-image}}mb-md-0 ml-md-4 ml-xl-5 pr-md-4 pr-xl-0{{else}}mb-xl-5 ml-md-4 ml-xl-5 px-md-4 px-xl-5{{/if}}">
        {{#if badge}}
          {{render '@badge' badge}}
        {{/if}}

        {{#if heading}}
          {{> '@headings' heading}}
        {{/if}}

        {{#if body}}
        <div>
          {{#each body}}
            {{> '@paragraphs--paragraph' paragraph}}
          {{/each}}
        </div>
        {{/if}}

        {{#if blockquote}}
          {{render '@block-quotes' blockquote}}
        {{/if}}

        {{#if link-group}}
          {{render '@link-group' link-group}}
        {{/if}}

        {{#if app-store-badges}}
        <div class="mt-4">
        {{#each app-store-badges}}
          <a href="{{href}}" class="d-block my-4">
            {{ render '@images' img merge=true }}
          </a>
        {{/each}}
        </div>
        {{/if}}
      </div>
      {{#if ../middle-image}}
        </div>{{!-- Close primary content area column --}}

        {{!-- Middle image column --}}
        <div class="col-md-4 col-xl-5">

          {{!-- Middle background box (for smaller views) --}}
          <div class="position-absolute h-100 w-100 ml-ng mt-4 material-surface d-md-none">
          </div>

          {{!-- Middle image area --}}
          <div class="position-relative mr-ng mr-md-0 ml-md-n3 pl-md-1 ml-lg-n3 pl-lg-0 ml-xl-4 pl-xl-1">
            {{render '@images--full-width-picture-element' ../middle-image}}
          </div>
        </div>
      </div>{{!-- Close primary content inner row --}}
      {{/if}}
    </div>
  </div>{{!-- Close primary content column --}}
  {{/with}}

  {{!-- Secondary content column --}}
  {{#with secondary-content}}
  <div class="col-md-4">

    {{!-- Secondary content background box (for smaller views) --}}
    {{#if ../middle-image}}
    <div class="position-absolute h-100 w-100 ml-ng material-surface d-md-none">
    </div>
    {{/if}}

    {{!-- Secondary content area --}}
    <div class="pt-xl-5 px-xl-5{{#if ../middle-image}} position-relative{{/if}}">
      <div class="pb-4 pt-md-5 pr-md-5 pb-md-4 pb-xl-5">

        {{!-- Top text area --}}
        {{#with top-text}}
          {{#if body}}
          <div>
            {{#each body}}
              {{> '@paragraphs--paragraph' paragraph}}
            {{/each}}
          </div>
          {{/if}}
        {{/with}}

        {{!-- Secondary image area --}}
        <div class="{{#if ../middle-image}}ml-ng {{#if top-text}}mt-4 mt-xl-5 {{/if}}{{else}}mr-ng {{/if}}{{#if bottom-text}}mb-4 mb-xl-5 {{/if}}mx-md-n4 mx-xl-n5">
          <div class="mr-md-n4 mr-xl-n5{{#if show-video-icon }} position-relative{{/if}}">
            {{render '@images--full-width-picture-element' secondary-image}}
            {{#if show-video-icon }}
            <div class="play-video-icon bg-light glyph-prepend glyph-prepend-play-button-72 depth-8" aria-hidden="true"></div>
            <button type="button" id="playVideo1" class="action-trigger glyph-prepend glyph-prepend-play mt-2 mt-md-3">
              Play Video
            </button>
            {{/if}}
          </div>
        </div>

        {{!-- Bottom text area --}}
        {{#with bottom-text}}
          {{#if badge}}
            {{render '@badge' badge}}
          {{/if}}

          {{#if heading}}
            {{> '@headings' heading}}
          {{/if}}

          {{#if body}}
          <div>
            {{#each body}}
              {{> '@paragraphs--paragraph' paragraph}}
            {{/each}}
          </div>
          {{/if}}

          {{#if blockquote}}
            {{render '@block-quotes' blockquote}}
          {{/if}}

          {{#if link-group}}
            {{render '@link-group' link-group}}
          {{/if}}

          {{#if app-store-badges}}
          <div class="mt-4">
          {{#each app-store-badges}}
            <a href="{{href}}" class="d-block my-3">
              {{ render '@images' img merge=true }}
            </a>
          {{/each}}
          </div>
          {{/if}}
        {{/with}}

      </div>
    </div>{{!-- Close secondary content area --}}
    {{/with}}

  </div>{{!-- Close secondary content column --}}
</div>{{!-- Close row --}}

<div class="d-flex w-100 h-100 material-surface position-relative {{#if material-color}}material-color-{{material-color}}{{/if}}">
    <div class="d-flex flex-row w-100 h-100 {{#if half-width}}flex-wrap{{/if}}" 
      {{#if text-only }}style="min-height: 220px"{{/if}}>
      {{#if content}}
        {{#if content.text-position-absolute}}
        <div class="flex-row w-100 position-absolute bottom-0">
          <div class="flex-end w-75 material-surface
            {{~#if (evaluate content.spacing "==" "small")}} py-2 px-3 px-md-4
            {{~else}} py-3 px-4 px-md-5 {{/if~}}
            {{~#if material-color}} material-color-{{material-color}}{{/if~}}">
        {{else}}
          <div class="py-5{{#if half-width}} w-100 w-sm-50 px-4 px-xl-5{{else}} px-5{{/if}}{{#if text-only}} d-flex align-items-center{{/if}}">
            <div>
        {{/if}}
            {{#if content.badge}}
              {{render '@badge' content.badge merge=true}}
            {{/if}}
            {{#if content.headings}}
              {{#if (evaluate material-color "==" "brand-dark")}}
                {{#with content.headings}}
                  {{> '@headings' color="brand-light"}}
                {{/with}}
                {{else}}
                  {{render '@headings' content.headings merge=true}}
              {{/if}}
            {{/if}}
            {{#if content.price}}
              {{render '@sale-price' content.price}}
            {{/if}}
            {{#if content.text}}
              <p>{{content.text}}</p>
            {{/if}}
            {{#if content.link-group}}
              {{render '@link-group' content.link-group}}
            {{/if}}
            </div>
          </div>
      {{/if}}

    {{#if show-image}}
        {{#if half-width}}
            <div class="w-100 w-sm-50">{{render '@images--full-width-picture-element' images}}</div>
        {{else}}
            <div>{{render '@images' images merge=true}}</div>
        {{/if}}
    {{/if}}
    </div>
</div>

{{#each link-group.links}}
    {{#if this.action-trigger.modal.id}}
        {{#> @modal id=this.action-trigger.modal.id button=false}}
            {{#*inline "body-partial"}}
                Embed third-party video player here.
            {{/inline}}
        {{/@modal}}
    {{/if}}
{{/each}}
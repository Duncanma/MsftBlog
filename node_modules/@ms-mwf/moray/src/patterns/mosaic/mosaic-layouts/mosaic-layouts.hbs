<div class="d-md-flex mt-n2 mr-md-n2">
    <div class="col p-0 mr-md-2 mb-md-0 d-flex flex-column">
        {{#each tiles }}
            <div class="mt-2 flex-grow-1 {{#if text-only}}d-flex w-100 h-100 flex-shrink-1{{else}}flex-shrink-0{{/if}}"
                {{#unless text-only}}style="min-height: 1px;"{{/unless}}>
                {{> '@mosaic-tiles'  }}
            </div>

            {{#compareAnd ../tiles.length 2 @index 0 }}
                </div>
                <div class="col p-0 mr-md-2 mb-md-0 d-flex flex-column">
            {{/compareAnd}}

            {{#compareAnd ../tiles.length 3 @index 0 }}
                </div>
                <div class="col p-0 mr-md-2 mb-md-0 d-flex flex-column">
            {{/compareAnd}}

            {{#compareAnd ../tiles.length 4 @index 1 }}
                </div>
                <div class="col p-0 mr-md-2 mb-md-0 d-flex flex-column">
            {{/compareAnd}}
        {{/each}}
    </div>
</div>

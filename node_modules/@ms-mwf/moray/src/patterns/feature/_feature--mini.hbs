{{#> '@card-layout--grid' grid=(object row-cols=(array '1' 'md-2')) classes=''}}
  {{#*inline 'cards'}}
    {{#each mini-features}}
      {{setVar 'cardClasses' (array 'h-100 material-surface')}}
      {{setVar 'contentClasses' (array 'col d-flex')}}
      {{setVar 'bodyClasses' (array 'align-self-center py-4 py-lg-5 pr-g pr-sm-4 pr-md-4')}}

      {{#if color-scheme}}
        {{push (getVar 'cardClasses') (strConcat 'material-color-' color-scheme)}}
      {{/if}}
      {{#if left}}
        {{push (getVar 'contentClasses') 'pl-0 pl-sm-g'}}
        {{setProp left 'col-classes' 'col'}}
        {{setProp left.image 'classes' 'img-object-cover'}}
      {{else}}
        {{push (getVar 'bodyClasses') 'pl-g pl-sm-4 px-xl-5'}}
      {{/if}}
      
      {{setProp this 'attributes' (evaluate attributes '||' (object))}}
      {{setProp attributes 'data-mount' 'click-group'}}
      {{setProp this 'classes' (join (getVar 'cardClasses') ' ')}}
      {{setProp this 'row-classes' 'h-100'}}
      {{setProp right 'col-classes' (join (getVar 'contentClasses') ' ')}}
      {{setProp right.body 'classes' (join (getVar 'bodyClasses') ' ')}}

      <div class="col {{#unless @last}}mb-g mb-md-0{{/unless}}">
        {{#> '@card--horizontal'}}
          {{#*inline 'body'}}
            {{#if (evaluate color-scheme "==" "brand-dark")}}
              {{#with heading}}
                {{> '@headings' color="brand-light"}}
              {{/with}}
            {{else}}
              {{render '@headings' heading merge=true}}
            {{/if}}
            {{#if body}}
              <div>
                {{#each body}}
                  {{#if paragraph}}{{> '@paragraphs--paragraph' paragraph}}{{/if}}
                {{/each}}
              </div>
            {{/if}}
            {{#if link-group}}
              {{#with link-group}}
                {{> '@link-group' color-scheme=../color-scheme}}
              {{/with}}
            {{/if}}
          {{/inline}}
        {{/'@card--horizontal'}}
      </div>
    {{/each}}
  {{/inline}}
{{/'@card-layout--grid'}}

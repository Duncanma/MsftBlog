<form class="my-4" role="search">
  {{setVar 'searchInputId' (uid)}}
  <label for="{{getVar 'searchInputId'}}">
    {{~#if search-form.label.text}}{{~search-form.label.text~}}{{~else}}Search{{/if~}}
  </label>
  <div class="input-group">
    {{~#if color-scheme}}
      {{> '@text-field' id=(getVar 'searchInputId') type="search" classes="border-right-0 text-reset border-current-color bg-transparent"}}
      <div class="input-group-append">
        <button class="btn glyph-append glyph-append-search border-left-0 pl-2 border-current-color bg-transparent text-reset" type="submit" aria-label="Search"></button>
      </div>
    {{else}}
      {{> '@text-field' id=(getVar 'searchInputId') type="search" classes="border-right-0"}}
      <div class="input-group-append">
        <button class="btn glyph-append glyph-append-search border-left-0 pl-2 border-neutral-400 bg-body" type="submit" aria-label="Search"></button>
      </div>
    {{/if}}
  </div>
</form>

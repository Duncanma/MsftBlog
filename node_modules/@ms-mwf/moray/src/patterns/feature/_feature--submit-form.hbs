<form class="my-4">
  {{setVar 'inputId' (uid)}}
  <label for="{{getVar 'inputId'}}">
    {{~#if submit-form.label.text}}{{~submit-form.label.text~}}{{~else}}Email address{{/if~}}
  </label>
  <div class="form-row">
    <div class="col">
      {{~#if color-scheme}}
        {{> '@text-field' id=(getVar 'inputId') type="email" name="email" attributes=(object autocomplete="email") classes="text-reset border-current-color bg-transparent"}}
      {{else}}
        {{> '@text-field' id=(getVar 'inputId') type="email" name="email" attributes=(object autocomplete="email")}}
      {{/if}}
    </div>
    <div class="col-auto">
      {{~#if (evaluate color-scheme "==" "brand")}}
        {{> '@button' color="brand" style="inverted" attributes=(object type="submit") text="Submit"}}
      {{~else if (evaluate color-scheme "==" "brand-dark")}}
        {{> '@button' color="brand-light" attributes=(object type="submit") text="Submit"}}
      {{else}}
        {{> '@button' color="primary" attributes=(object type="submit") text="Submit"}}
      {{/if}}
    </div>
  </div>
</form>

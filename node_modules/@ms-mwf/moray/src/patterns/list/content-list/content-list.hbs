<ul class="row list-unstyled">
  {{#each content}}
    <li class="col-10 mx-auto{{#if ../3column}} col-md-4{{/if}}{{#if ../4column}} col-md-3{{/if}}{{#if ../5column}} col-md-2 mx-md-0{{/if}}{{#if ../6column}} col-md-4 col-lg-2{{#ifCond @index '<' 3}} mb-md-3 mb-lg-0{{else}} mb-md-0{{/ifCond}}{{/if}}{{#unless @last}} mb-4 pb-g pb-md-0 {{#ifCond ../6column '!==' true}} mb-md-0{{/ifCond}}{{/unless}}{{#if ../large-image}} d-flex d-lg-block{{/if}}">
      {{#if images}}
        <div class="{{#if ../inline-image}}d-inline {{/if}}">
          {{#if images.vp4}}{{ render '@images--full-width-picture-element' images}}
          {{else}}{{ render '@images' images}}{{/if}}
        </div>
      {{/if}}
      {{#if heading}}<span class="h1{{#unless ../inline-image}} d-block mb-1{{/unless}}{{#if ../inline-image}} ml-1 d-inline {{/if}} {{ heading.class}}">{{heading.text}}</span>{{/if}}
      <span class="{{#if ../large-image}}ml-g pl-2 ml-sm-5 pl-sm-4 ml-md-0 pl-md-2 mt-lg-3 pl-lg-0 d-block {{else}}mt-1 d-block {{/if}}{{description.class}}">{{description.text}}</span>
    </li>
  {{/each}}
</ul>

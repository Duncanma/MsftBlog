<nav {{#if heading}}aria-labelledby="{{heading.id}}" {{else}}aria-label="{{aria-label}}" {{/if}}>
  {{#if heading}}
  {{render '@headings' heading}}
  {{/if}}
  <ul class="text-center d-flex flex-wrap list-inline {{#unless leftAligned}}justify-content-center{{/unless}}">
    {{#each links}}
    <li class="font-weight-semibold mx-4 my-3 d-flex align-items-center {{#if image}}card flex-grow-0 {{/if}}{{classes}}" {{#ifCond image '||' glyph}}data-mount="click-group" {{/ifCond}}>
      {{#if glyph}}
      <span class="{{glyph}} d-flex align-items-center text-primary mr-2" aria-hidden="true"></span>
      {{/if}}
      {{#if image}}
        {{#with image}}
          {{> '@images--fixed-dimension-with-title' classes="img-fluid flex-shrink-0 mb-2"}}
        {{/with}}
      {{/if}}
      <a href="{{href}}">{{text}}</a>
    </li>
    {{/each}}
  </ul>
</nav>

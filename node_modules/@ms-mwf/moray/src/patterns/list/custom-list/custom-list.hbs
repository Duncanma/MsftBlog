<ul class="{{#if inline}}d-flex flex-wrap{{/if}} list-unstyled {{#if inline}}mb-ng{{else}}mb-n4{{/if}}">
  {{~#each list-items}}
  {{~#if ../inline}}
    {{~#unless @last~}}
      {{~#if classes~}}
        {{~#unless (contains classes 'mr-4')~}}
          {{~setProp this 'classes' (math classes '+' ' mr-4')~}}
        {{~/unless~}}
      {{~else~}}
        {{~setProp this 'classes' 'mr-4'~}}
      {{~/if~}}
    {{~/unless~}}
  {{~/if~}}
  <li class="{{#if ../inline}}mb-g{{else}}mb-4{{/if}} {{#if custom-bullet}}d{{#if ../inline}}-inline{{/if}}-flex{{/if}} {{classes}}" {{#if link}}data-mount="click-group" {{/if}}{{{htmlAttr attributes}}}>
    {{#if custom-bullet.image}}{{render '@images--fixed-dimension-with-title' custom-bullet.image}}{{/if}}
    {{~#if custom-bullet.glyph}}
      <span class="d-flex glyph-prepend glyph-prepend-large {{custom-bullet.glyph}}{{#if link}} text-primary{{/if}}" aria-hidden="true"></span>
    {{/if~}}
    <div class="card {{#if custom-bullet}}{{#if ../inline}}ml-2{{else}}ml-3{{/if}}{{/if}}">
      <div class="card-body">
        {{~#if ../inline}}
          {{~#with headings~}}
            {{~#if ../link~}}
              {{#> '@headings' headings html-tag="p" classes=(tokenConcat 'mb-0' classes)}}
                <a href={{../../link.href}}>{{../text}}</a>
              {{/'@headings'}}
            {{~else~}}
              {{> '@headings' html-tag="p" classes=(tokenConcat 'mb-0' classes)}}
            {{~/if~}}
          {{~/with~}}
        {{~else~}}
          {{render '@headings' headings}}
        {{~/if~}}
        {{~#each paragraphs}}
          {{render '@paragraphs' this}}
        {{/each}}
      </div>
      {{#ifCond cta '||' button}}
        <div class="card-footer mt-4">
          {{#if ../cta}}
            {{render '@call-to-action' ../cta}}
          {{/if}}
          {{#if ../button}}
            {{render '@button' ../button}}
          {{~/if}}
        </div>
      {{/ifCond}}
    </div>
  </li>
  {{/each}}
</ul>
